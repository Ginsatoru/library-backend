@model LibrarySystemBBU.Models.Member

@{
    ViewData["Title"] = "Create Member";
}

<link rel="stylesheet" href="~/font-awesome/css/all.min.css" />
<style>
    .card-3d {
        border: none;
        border-radius: 2rem;
        box-shadow: 0 10px 24px 0 rgba(0,0,0,0.11), 0 2px 4px 0 rgba(0,0,0,0.13);
        background: linear-gradient(135deg,#e0f2fe 0%,#f8fafc 100%);
        overflow: hidden;
        transition: transform .2s, box-shadow .2s;
    }

        .card-3d:hover {
            transform: translateY(-5px) scale(1.01);
            box-shadow: 0 16px 32px 0 rgba(0,126,255,0.17), 0 6px 12px 0 rgba(0,0,0,0.14);
        }

    .btn-glass {
        background: rgba(59,130,246,0.12);
        border: 1px solid #93c5fd;
        color: #2563eb;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.2s;
    }

        .btn-glass:hover {
            background: #60a5fa;
            color: #fff;
            border: 1px solid #2563eb;
        }

    .avatar-3d {
        width: 88px;
        height: 88px;
        object-fit: cover;
        border-radius: 50%;
        border: 2.5px solid #38bdf8;
        background: #e0f2fe;
        box-shadow: 0 3px 10px 0 rgba(52,144,220,0.13);
    }

    .filename-label {
        font-size: 0.95em;
        color: #4b5563;
        margin-top: 0.35rem;
    }
</style>

<div class="row justify-content-center mt-5">
    <div class="col-md-7 col-lg-6">
        <div class="card card-3d">
            <div class="card-body p-5">
                <h2 class="fw-bold text-primary text-center mb-4">
                    <i class="fa-solid fa-user-plus fa-lg"></i> Create New Member
                </h2>
                <form asp-action="Create" enctype="multipart/form-data" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="text-center mb-3">
                        <img id="profilePreview"
                             src="https://ui-avatars.com/api/?name=Member&background=60a5fa&color=fff&size=128"
                             class="avatar-3d mb-2"
                             alt="Preview" />
                        <label class="btn btn-glass btn-sm ms-2 mb-1" style="position:relative;">
                            <i class="fa fa-upload"></i> Upload/Take Photo
                            <input type="file"
                                   name="ProfilePicture"
                                   accept="image/*"
                                   capture="environment"
                                   hidden
                                   onchange="showPreview(event);" />
                        </label>
                        <button type="button"
                                onclick="resetPreview()"
                                class="btn btn-glass btn-sm ms-2"
                                tabindex="-1"
                                aria-label="Clear Photo">
                            <i class="fa fa-times"></i> Clear
                        </button>
                        <div id="filenameLabel" class="filename-label"></div>
                        <span asp-validation-for="ProfilePicturePath" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label"><i class="fa fa-user"></i> Full Name</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Gender" class="form-label"><i class="fa fa-venus-mars"></i> Gender</label>
                        <select asp-for="Gender" class="form-select">
                            <option value="">-- Select Gender --</option>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"><i class="fa fa-envelope"></i> Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label"><i class="fa fa-phone"></i> Phone</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"><i class="fa fa-location-dot"></i> Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="MemberType" class="form-label"><i class="fa fa-id-card-clip"></i> Type</label>
                        <select asp-for="MemberType" class="form-select">
                            <option value="">-- Select Type --</option>
                            <option>Student</option>
                            <option>Teacher</option>
                            <option>Guest</option>
                            <option>Other</option>
                        </select>
                        <span asp-validation-for="MemberType" class="text-danger small"></span>
                    </div>
                    <div class="mb-3 form-check">
                        <input class="form-check-input" asp-for="IsActive" id="IsActive" />
                        <label class="form-check-label" for="IsActive">
                            <i class="fa fa-toggle-on"></i> Active
                        </label>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label"><i class="fa fa-note-sticky"></i> Notes</label>
                        <input asp-for="Notes" class="form-control" />
                        <span asp-validation-for="Notes" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="UserId" class="form-label"><i class="fa fa-user-tie"></i> Linked User</label>
                        <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CreatedBy" class="form-label"><i class="fa fa-user"></i> Created By</label>
                        <!-- CHANGED: Use a select, not input, for Created By -->
                        <select asp-for="CreatedBy" class="form-select" asp-items="ViewBag.CreatedByList"></select>
                        <span asp-validation-for="CreatedBy" class="text-danger small"></span>
                    </div>
                    <div class="mt-4 text-center">
                        <button type="submit" class="btn btn-success btn-glass px-5 py-2 rounded-pill fw-bold">
                            <i class="fa-solid fa-circle-plus"></i> Create Member
                        </button>
                        <a asp-action="Index" class="btn btn-glass ms-2 rounded-pill px-3">
                            <i class="fa-solid fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showPreview(event) {
            var input = event.target;
            var reader = new FileReader();
            reader.onload = function () {
                var preview = document.getElementById('profilePreview');
                preview.src = reader.result;
            };
            var fileName = '';
            if (input.files && input.files[0]) {
                reader.readAsDataURL(input.files[0]);
                fileName = input.files[0].name;
            }
            document.getElementById('filenameLabel').innerText = fileName ? "Selected: " + fileName : "";
        }
        function resetPreview() {
            var preview = document.getElementById('profilePreview');
            preview.src = "https://ui-avatars.com/api/?name=Member&background=60a5fa&color=fff&size=128";
            var fileInput = document.querySelector('input[name="ProfilePicture"]');
            if (fileInput) {
                fileInput.value = "";
            }
            document.getElementById('filenameLabel').innerText = "";
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
