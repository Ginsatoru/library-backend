@model LibrarySystemBBU.Models.Member

@{
    ViewData["Title"] = "Edit Member";
}

<link rel="stylesheet" href="~/font-awesome/css/all.min.css" />
<style>
    .card-3d {
        border: none;
        border-radius: 2rem;
        box-shadow: 0 10px 24px 0 rgba(0,0,0,0.11), 0 2px 4px 0 rgba(0,0,0,0.13);
        background: linear-gradient(135deg, #e0f2fe 0%, #f8fafc 100%);
        overflow: hidden;
        margin-top: 30px;
        max-width: 540px;
        margin-left: auto;
        margin-right: auto;
    }

    .avatar-3d {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 50%;
        border: 3px solid #38bdf8;
        box-shadow: 0 4px 12px 0 rgba(52,144,220,0.18);
        background: #e0f2fe;
        margin-bottom: 1.2rem;
    }

    .btn-glass {
        background: rgba(59,130,246,0.15);
        border: 1px solid #93c5fd;
        color: #2563eb;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.18s;
    }

        .btn-glass:hover {
            background: #60a5fa;
            color: #fff;
            border: 1px solid #2563eb;
        }

    .filename-label {
        font-size: 0.93em;
        color: #64748b;
        margin-top: 0.15rem;
    }
</style>

<div class="card card-3d">
    <div class="card-body p-4">
        <h2 class="fw-bold text-center text-primary mb-3">
            <i class="fa-solid fa-user-pen"></i> Edit Member
        </h2>
        <form asp-action="Edit" enctype="multipart/form-data" autocomplete="off">
            <input type="hidden" asp-for="MemberId" />
            <input asp-for="ProfilePicturePath" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="text-center mb-2">
                <img id="profilePreview"
                     src="@(string.IsNullOrWhiteSpace(Model.ProfilePicturePath)
                                                   ? "https://ui-avatars.com/api/?name=" + (Model.FullName ?? "Member") + "&background=60a5fa&color=fff&size=128"
                                                   : Model.ProfilePicturePath)"
                     class="avatar-3d"
                     alt="Profile Preview" />
                <div class="mb-1">
                    <label class="btn btn-glass btn-sm ms-1" style="font-size:0.92em;">
                        <i class="fa fa-upload"></i> Change Photo
                        <input type="file" name="ProfilePicture" id="ProfilePicture" accept="image/*" capture="environment" hidden onchange="showPreview(event);" />
                    </label>
                    <button type="button"
                            onclick="resetPreview()"
                            class="btn btn-glass btn-sm ms-2"
                            tabindex="-1"
                            aria-label="Clear Photo">
                        <i class="fa fa-times"></i> Clear
                    </button>
                    <div id="filenameLabel" class="filename-label"></div>
                </div>
                <span asp-validation-for="ProfilePicturePath" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label"><i class="fa-solid fa-user"></i> Full Name</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Gender" class="form-label"><i class="fa-solid fa-venus-mars"></i> Gender</label>
                <select asp-for="Gender" class="form-select">
                    <option value="">-- Select Gender --</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"><i class="fa-solid fa-envelope"></i> Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Phone" class="form-label"><i class="fa-solid fa-phone"></i> Phone</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address" class="form-label"><i class="fa-solid fa-location-dot"></i> Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="MemberType" class="form-label"><i class="fa-solid fa-id-card-clip"></i> Member Type</label>
                <select asp-for="MemberType" class="form-select">
                    <option value="">-- Select Type --</option>
                    <option>Student</option>
                    <option>Teacher</option>
                    <option>Guest</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="MemberType" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="JoinDate" class="form-label"><i class="fa-solid fa-calendar-plus"></i> Join Date</label>
                <input asp-for="JoinDate" type="date" class="form-control" />
                <span asp-validation-for="JoinDate" class="text-danger small"></span>
            </div>
            <div class="form-check form-switch mb-3">
                <input class="form-check-input" asp-for="IsActive" id="IsActiveSwitch" />
                <label class="form-check-label" for="IsActiveSwitch">
                    <i class="fa-solid fa-circle-check"></i> Active
                </label>
            </div>
            <div class="mb-3">
                <label asp-for="Notes" class="form-label"><i class="fa-solid fa-note-sticky"></i> Notes</label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="UserId" class="form-label"><i class="fa-solid fa-user-tie"></i> Linked User</label>
                <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CreatedBy" class="form-label"><i class="fa-solid fa-user"></i> Created By</label>
                <select asp-for="CreatedBy" class="form-select" asp-items="ViewBag.CreatedByList"></select>
                <span asp-validation-for="CreatedBy" class="text-danger small"></span>
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-5 py-2 rounded-pill fw-bold">
                    <i class="fa-solid fa-floppy-disk"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-glass ms-2 px-3 rounded-pill">
                    <i class="fa-solid fa-arrow-left"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function showPreview(event) {
            var input = event.target;
            var reader = new FileReader();
            reader.onload = function () {
                var preview = document.getElementById('profilePreview');
                preview.src = reader.result;
            };
            var fileName = '';
            if (input.files && input.files[0]) {
                reader.readAsDataURL(input.files[0]);
                fileName = input.files[0].name;
            }
            document.getElementById('filenameLabel').innerText = fileName ? "Selected: " + fileName : "";
        }
        function resetPreview() {
            var preview = document.getElementById('profilePreview');
            preview.src = "@(string.IsNullOrWhiteSpace(Model.ProfilePicturePath)
                            ? "https://ui-avatars.com/api/?name=" + (Model.FullName ?? "Member") + "&background=60a5fa&color=fff&size=128"
                            : Model.ProfilePicturePath)";
        var fileInput = document.getElementById('ProfilePicture');
        if (fileInput) fileInput.value = "";
        document.getElementById('filenameLabel').innerText = "";
    }
</script>
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
