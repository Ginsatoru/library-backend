@model LibrarySystemBBU.ViewModels.ForgotPasswordRequestViewModel
@{
    Layout = null;
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            min-height: 100vh;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: radial-gradient(circle at top left, #184281 0, #160e9ee3 55%, #001f95 100%);
            color: #fff;
        }

        .login-bg {
            position: relative;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            overflow: hidden;
        }

            .login-bg::before {
                content: "";
                position: absolute;
                inset: 0;
                background: radial-gradient(circle at top left, rgb(255 255 255 / 30%), transparent 60%), radial-gradient(circle at bottom right, rgb(136 103 195 / 35%), transparent 60%), url(/admin-lte/img/bbulogo.png) no-repeat center;
                background-size: 300px 300px;
                opacity: 0.25;
                filter: blur(1px);
            }

        .glass-card {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 380px;
            padding: 2.5rem 2.25rem;
            border-radius: 22px;
            background: rgba(255, 255, 255, 0.10);
            border: 1px solid rgba(255, 255, 255, 0.35);
            box-shadow: 0 20px 45px rgba(0, 0, 0, 0.55);
            backdrop-filter: blur(5px) brightness(1.2);
            -webkit-backdrop-filter: blur(18px) brightness(1.2);
        }

            .glass-card h3 {
                font-weight: 700;
            }

        .subtitle {
            font-size: 0.9rem;
            opacity: 0.8;
        }

        .form-label {
            color: #f1f1f1;
            font-weight: 500;
        }

        .form-control {
            border-radius: 999px;
            background: rgba(255, 255, 255, 0.18);
            border: 1px solid rgba(255, 255, 255, 0.45);
            color: #fff;
        }

            .form-control:focus {
                outline: none;
                box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.35);
                background: rgba(255, 255, 255, 0.25);
            }

            .form-control::placeholder {
                color: rgba(240, 240, 240, 0.75);
            }

        .btn-primary {
            border-radius: 999px;
            font-weight: 600;
            border: none;
            box-shadow: 0 12px 24px rgba(13, 110, 253, 0.55);
        }

            .btn-primary:hover {
                box-shadow: 0 16px 32px rgba(13, 110, 253, 0.75);
            }

        a {
            color: #aad4ff;
            text-decoration: none;
        }

            a:hover {
                color: #ffffff;
                text-decoration: underline;
            }

        .text-danger {
            font-size: 0.85rem;
        }
    </style>
</head>
<body>
    <div class="login-bg">
        <div class="glass-card">
            <div class="text-center mb-4">
                <h3>Forgot Password</h3>
                <p class="subtitle">
                    Enter your email or username.<br />
                    We will send a 6-digit OTP.
                </p>
            </div>

            @if (TempData["ForgotPwdMsg"] != null)
            {
                <div class="alert alert-info py-2">
                    @TempData["ForgotPwdMsg"]
                </div>
            }

            <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="mb-3">
                    <label asp-for="EmailOrUserName" class="form-label">Email or Username</label>
                    <input asp-for="EmailOrUserName"
                           class="form-control"
                           placeholder="Enter your email or username" />
                    <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    📩 Send OTP
                </button>

                <div class="text-center mt-3">
                    <a asp-controller="Account" asp-action="Login">
                        Back to Login
                    </a>
                </div>
            </form>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
