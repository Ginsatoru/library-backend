@model LibrarySystemBBU.ViewModels.ForgotPasswordRequestViewModel
@{
    Layout = null;
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        *, *::before, *::after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            min-height: 100vh;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: #0a0a1a url('/admin-lte/img/bbulogo.png') no-repeat center;
            background-size: 520px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            position: relative;
        }

            body::before {
                content: "";
                position: fixed;
                inset: 0;
                background: linear-gradient(135deg, #000080 0%, #0a0a2e 50%, #000040 100%);
                opacity: 0.92;
                z-index: 0;
            }

            body::after {
                content: "";
                position: fixed;
                inset: 0;
                background: radial-gradient(ellipse 600px 400px at 20% 20%, rgba(0, 0, 180, 0.25) 0%, transparent 70%), radial-gradient(ellipse 500px 350px at 80% 80%, rgba(0, 0, 120, 0.2) 0%, transparent 70%);
                z-index: 0;
            }

        .wrapper {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 420px;
        }

        .card {
            background: #ffffff;
            border-radius: 2rem;
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.5);
            overflow: hidden;
            border: none;
        }

        .card-body {
            padding: 2.5rem 2.25rem;
        }

        .logo-wrap {
            display: flex;
            justify-content: center;
            margin-bottom: 1.5rem;
        }

            .logo-wrap img {
                height: 64px;
                object-fit: contain;
            }

        .card-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #111827;
            text-align: center;
            margin-bottom: 0.25rem;
            letter-spacing: -0.02em;
        }

        .card-subtitle {
            font-size: 0.875rem;
            color: #9ca3af;
            text-align: center;
            margin-bottom: 1.75rem;
            line-height: 1.5;
        }

        .badge-admin {
            display: inline-flex;
            align-items: center;
            gap: 0.35rem;
            background: #eff6ff;
            color: #000080;
            font-size: 0.7rem;
            font-weight: 600;
            padding: 0.3rem 0.75rem;
            border-radius: 999px;
            margin-bottom: 1.5rem;
            letter-spacing: 0.04em;
            text-transform: uppercase;
        }

        .badge-wrap {
            display: flex;
            justify-content: center;
        }

        .form-label {
            font-size: 0.8rem;
            font-weight: 500;
            color: #6b7280;
            margin-bottom: 0.4rem;
            display: block;
        }

        .input-group-custom {
            display: flex;
            align-items: center;
            gap: 0.6rem;
            padding: 0.75rem 1rem;
            border-radius: 1rem;
            border: 1.5px solid #e5e7eb;
            background: #f9fafb;
            transition: border-color 0.15s, box-shadow 0.15s;
        }

            .input-group-custom:focus-within {
                border-color: #000080;
                box-shadow: 0 0 0 3px rgba(0, 0, 128, 0.12);
                background: #fff;
            }

            .input-group-custom svg {
                flex-shrink: 0;
                color: #9ca3af;
            }

            .input-group-custom input {
                flex: 1;
                border: none;
                background: transparent;
                outline: none;
                font-size: 0.875rem;
                color: #111827;
            }

                .input-group-custom input::placeholder {
                    color: #9ca3af;
                }

        .form-group {
            margin-bottom: 1rem;
        }

        .text-danger {
            font-size: 0.78rem;
            margin-top: 0.25rem;
            display: block;
            color: #dc2626;
        }

        .btn-login {
            width: 100%;
            padding: 0.8rem;
            background: #000080;
            color: #fff;
            border: none;
            border-radius: 1rem;
            font-size: 0.875rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.15s, transform 0.1s;
            letter-spacing: 0.01em;
        }

            .btn-login:hover {
                background: #00006a;
            }

            .btn-login:active {
                transform: scale(0.98);
            }

        .alert-error {
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: #dc2626;
            border-radius: 1rem;
            padding: 0.65rem 1rem;
            font-size: 0.8rem;
            margin-bottom: 1rem;
        }

        .alert-info-custom {
            background: #eff6ff;
            border: 1px solid #bfdbfe;
            color: #1d4ed8;
            border-radius: 1rem;
            padding: 0.65rem 1rem;
            font-size: 0.8rem;
            margin-bottom: 1rem;
        }

        .divider {
            border: none;
            border-top: 1px solid #f3f4f6;
            margin: 1.5rem 0 0;
        }

        .footer-note {
            text-align: center;
            font-size: 0.75rem;
            color: #9ca3af;
            padding-top: 1rem;
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 1rem;
            font-size: 0.8rem;
            color: #000080;
            font-weight: 500;
            text-decoration: none;
        }

            .back-link:hover {
                text-decoration: underline;
                color: #000060;
            }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="card">
            <div class="card-body">

                <!-- Logo -->
                <div class="logo-wrap">
                    <img src="/admin-lte/img/bbulogo.png" alt="BBU Library" onerror="this.style.display='none'" />
                </div>

                <!-- Badge -->
                <div class="badge-wrap">
                    <span class="badge-admin">
                        <svg width="10" height="10" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        Password Recovery
                    </span>
                </div>

                <h2 class="card-title">Forgot Password</h2>
                <p class="card-subtitle">Enter your email or username and<br />we'll send you a 6-digit OTP.</p>

                @if (TempData["ForgotPwdMsg"] != null)
                {
                    <div class="alert-info-custom">@TempData["ForgotPwdMsg"]</div>
                }

                <form asp-controller="Account" asp-action="ForgotPassword" method="post" autocomplete="off">
                    @Html.AntiForgeryToken()

                    @{
                        var errors = ViewData.ModelState.Values.SelectMany(v => v.Errors).ToList();
                    }
                    @if (errors.Any())
                    {
                        <div class="alert-error">@errors.First().ErrorMessage</div>
                    }

                    <div class="form-group">
                        <label class="form-label">Email or Username</label>
                        <div class="input-group-custom">
                            <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            <input asp-for="EmailOrUserName" type="text" placeholder="Enter your email or username" />
                        </div>
                        <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-login">Send OTP</button>
                </form>

                <a asp-controller="Account" asp-action="Login" class="back-link">
                    ← Back to Login
                </a>

                <hr class="divider" />
                <p class="footer-note">BBU Library System &mdash; Admin Access Only</p>
            </div>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
