@model LibrarySystemBBU.ViewModels.ResetPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Reset Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        *, *::before, *::after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            min-height: 100vh;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: #0a0a1a url('/admin-lte/img/bbulogo.png') no-repeat center;
            background-size: 520px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            position: relative;
        }

            body::before {
                content: "";
                position: fixed;
                inset: 0;
                background: linear-gradient(135deg, #000080 0%, #0a0a2e 50%, #000040 100%);
                opacity: 0.92;
                z-index: 0;
            }

            body::after {
                content: "";
                position: fixed;
                inset: 0;
                background: radial-gradient(ellipse 600px 400px at 20% 20%, rgba(0, 0, 180, 0.25) 0%, transparent 70%), radial-gradient(ellipse 500px 350px at 80% 80%, rgba(0, 0, 120, 0.2) 0%, transparent 70%);
                z-index: 0;
            }

        .wrapper {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 420px;
        }

        .card {
            background: #ffffff;
            border-radius: 2rem;
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.5);
            overflow: hidden;
            border: none;
        }

        .card-body {
            padding: 2.5rem 2.25rem;
        }

        .logo-wrap {
            display: flex;
            justify-content: center;
            margin-bottom: 1.5rem;
        }

            .logo-wrap img {
                height: 64px;
                object-fit: contain;
            }

        .card-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #111827;
            text-align: center;
            margin-bottom: 0.25rem;
            letter-spacing: -0.02em;
        }

        .card-subtitle {
            font-size: 0.875rem;
            color: #9ca3af;
            text-align: center;
            margin-bottom: 0.5rem;
        }

        .user-identifier {
            text-align: center;
            font-size: 0.9rem;
            font-weight: 600;
            color: #000080;
            background: #eff6ff;
            border-radius: 0.75rem;
            padding: 0.45rem 1rem;
            margin-bottom: 1.5rem;
            word-break: break-word;
        }

        .badge-admin {
            display: inline-flex;
            align-items: center;
            gap: 0.35rem;
            background: #eff6ff;
            color: #000080;
            font-size: 0.7rem;
            font-weight: 600;
            padding: 0.3rem 0.75rem;
            border-radius: 999px;
            margin-bottom: 1.5rem;
            letter-spacing: 0.04em;
            text-transform: uppercase;
        }

        .badge-wrap {
            display: flex;
            justify-content: center;
        }

        .form-label {
            font-size: 0.8rem;
            font-weight: 500;
            color: #6b7280;
            margin-bottom: 0.4rem;
            display: block;
        }

        .input-group-custom {
            display: flex;
            align-items: center;
            gap: 0.6rem;
            padding: 0.75rem 1rem;
            border-radius: 1rem;
            border: 1.5px solid #e5e7eb;
            background: #f9fafb;
            transition: border-color 0.15s, box-shadow 0.15s;
        }

            .input-group-custom:focus-within {
                border-color: #000080;
                box-shadow: 0 0 0 3px rgba(0, 0, 128, 0.12);
                background: #fff;
            }

            .input-group-custom svg {
                flex-shrink: 0;
                color: #9ca3af;
            }

            .input-group-custom input {
                flex: 1;
                border: none;
                background: transparent;
                outline: none;
                font-size: 0.875rem;
                color: #111827;
            }

                .input-group-custom input::placeholder {
                    color: #9ca3af;
                }

        .form-group {
            margin-bottom: 1rem;
        }

        .text-danger {
            font-size: 0.78rem;
            margin-top: 0.25rem;
            display: block;
            color: #dc2626;
        }

        .btn-login {
            width: 100%;
            padding: 0.8rem;
            background: #000080;
            color: #fff;
            border: none;
            border-radius: 1rem;
            font-size: 0.875rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.15s, transform 0.1s;
            letter-spacing: 0.01em;
        }

            .btn-login:hover {
                background: #00006a;
            }

            .btn-login:active {
                transform: scale(0.98);
            }

        .alert-error {
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: #dc2626;
            border-radius: 1rem;
            padding: 0.65rem 1rem;
            font-size: 0.8rem;
            margin-bottom: 1rem;
        }

        .divider {
            border: none;
            border-top: 1px solid #f3f4f6;
            margin: 1.5rem 0 0;
        }

        .footer-note {
            text-align: center;
            font-size: 0.75rem;
            color: #9ca3af;
            padding-top: 1rem;
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 1rem;
            font-size: 0.8rem;
            color: #000080;
            font-weight: 500;
            text-decoration: none;
        }

            .back-link:hover {
                text-decoration: underline;
                color: #000060;
            }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="card">
            <div class="card-body">

                <!-- Logo -->
                <div class="logo-wrap">
                    <img src="/admin-lte/img/bbulogo.png" alt="BBU Library" onerror="this.style.display='none'" />
                </div>

                <!-- Badge -->
                <div class="badge-wrap">
                    <span class="badge-admin">
                        <svg width="10" height="10" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                        </svg>
                        Reset Password
                    </span>
                </div>

                <h2 class="card-title">Set New Password</h2>
                <p class="card-subtitle">Enter the OTP sent to</p>
                <div class="user-identifier">@Model.EmailOrUserName</div>

                <form asp-action="ResetPassword" method="post" autocomplete="off">
                    @Html.AntiForgeryToken()

                    <input asp-for="EmailOrUserName" type="hidden" />

                    @{
                        var errors = ViewData.ModelState.Values.SelectMany(v => v.Errors).ToList();
                    }
                    @if (errors.Any())
                    {
                        <div class="alert-error">@errors.First().ErrorMessage</div>
                    }

                    <!-- OTP Code -->
                    <div class="form-group">
                        <label class="form-label">OTP Code</label>
                        <div class="input-group-custom">
                            <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                            </svg>
                            <input asp-for="OtpCode" type="text" placeholder="Enter 6-digit code" maxlength="6" />
                        </div>
                        <span asp-validation-for="OtpCode" class="text-danger"></span>
                    </div>

                    <!-- New Password -->
                    <div class="form-group">
                        <label class="form-label">New Password</label>
                        <div class="input-group-custom">
                            <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                            <input asp-for="NewPassword" type="password" placeholder="Enter new password" />
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="form-group">
                        <label class="form-label">Confirm New Password</label>
                        <div class="input-group-custom">
                            <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                            <input asp-for="ConfirmNewPassword" type="password" placeholder="Confirm new password" />
                        </div>
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-login">Reset Password</button>
                </form>

                <a asp-action="Login" class="back-link">← Back to Login</a>

                <hr class="divider" />
                <p class="footer-note">BBU Library System &mdash; Admin Access Only</p>
            </div>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
