@model RegisterRequest
@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 15px;">
        <div class="text-center mb-3">
            <h3 class="fw-bold text-primary">Create an Account 🚀</h3>
            <p class="text-muted">Join us today!</p>
        </div>
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control rounded-pill" placeholder="Choose a username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control rounded-pill" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RoleName" class="form-label"></label>
                <select asp-for="RoleName" asp-items="@Html.GetEnumSelectList(typeof(RoleEnum))"
                        class="form-select rounded-pill">
                    <option value="" style="display:none;">Select Role</option>
                </select>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Create a password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-pill shadow-sm">
                🎉 Register Now
            </button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" class="text-decoration-none text-primary">
                Already have an account? Login
            </a>
        </div>
    </div>
</div>
