@model LibrarySystemBBU.Controllers.LibraryLogsController.LibraryLogFormVM
@using Microsoft.AspNetCore.Mvc.Rendering
@using System.Text.Json

@{
    ViewData["Title"] = "Edit Library Log";
    var bookList = (SelectList)ViewBag.BookList;

    var bookMap = bookList.Cast<SelectListItem>()
                          .ToDictionary(i => i.Value!, i => i.Text!);

    string StatusBadge(string s) => s switch
    {
        "Approved" => "b-approved",
        "Returned" => "b-returned",
        _ => "b-pending"
    };
    string fmt(DateTime? dt) => dt.HasValue ? dt.Value.ToString("yyyy-MM-dd HH:mm") : "—";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    #libraryLogEditPage #logForm.card-glass.glas-all-style {
        margin-top: 4px;
    }

    #libraryLogEditPage .muted {
        color: var(--muted, #667085);
        font-size: .9rem;
    }

    #libraryLogEditPage .status-pill {
        display: inline-block;
        padding: .25rem .6rem;
        border-radius: 999px;
        border: 1px solid #dfe3ff;
        font-weight: 700;
        font-size: .82rem;
    }

    #libraryLogEditPage .b-pending {
        background: #fff7e6;
        color: #8a5a00;
        border-color: #ffe3ad;
    }

    #libraryLogEditPage .b-approved {
        background: #e9fff0;
        color: #0c5d35;
        border-color: #c8f0d7;
    }

    #libraryLogEditPage .b-returned {
        background: #eef1ff;
        color: #2b2f7f;
        border-color: #dfe3ff;
    }

    #libraryLogEditPage .wf {
        display: flex;
        gap: 10px;
        align-items: center;
        flex-wrap: wrap;
    }

        #libraryLogEditPage .wf small {
            color: var(--muted, #667085);
            font-size: .8rem;
        }

    /* Book picker layout */
    #libraryLogEditPage .picker {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
    }

    @@media (max-width: 768px) {
        #libraryLogEditPage .picker {
            grid-template-columns: 1fr;
        }
    }

    #libraryLogEditPage .list,
    #libraryLogEditPage .chosen {
        border: 1px solid rgba(1,0,140,.12);
        border-radius: 12px;
        min-height: 240px;
        background: #ffffff;
        display: flex;
        flex-direction: column;
    }

    #libraryLogEditPage .list-head {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 10px 12px;
        border-bottom: 1px solid rgba(1,0,140,.12);
        background: linear-gradient(180deg, var(--brand-50, #e6e6ff), #ffffff);
        position: sticky;
        top: 0;
        z-index: 2;
    }

        #libraryLogEditPage .list-head .form-control {
            font-size: .85rem;
        }

    #libraryLogEditPage .list-body {
        padding: 8px 12px 10px;
        max-height: 340px;
        overflow: auto;
        flex: 1;
    }

    #libraryLogEditPage .book-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 10px;
        border: 1px solid rgba(1,0,140,.08);
        border-radius: 10px;
        margin-bottom: 8px;
        background: linear-gradient(180deg, #ffffff, #f8f9ff);
        font-size: .9rem;
    }

        #libraryLogEditPage .book-item .title {
            font-weight: 600;
            color: var(--text, #0f0f2e);
            font-size: 16px;
        }

        #libraryLogEditPage .book-item .pick {
            border: 1px solid #dfe3ff;
            background: #eef1ff;
            border-radius: 999px;
            padding: 4px 10px;
            font-weight: 600;
            font-size: .8rem;
            cursor: pointer;
            white-space: nowrap;
        }

            #libraryLogEditPage .book-item .pick:hover {
                background: #dde3ff;
            }

    #libraryLogEditPage .chip {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: 1px solid rgba(1,0,140,.12);
        border-radius: 999px;
        padding: 6px 10px;
        margin: 6px 6px 0 0;
        background: linear-gradient(180deg, #ffffff, #f7f8ff);
        font-size: .85rem;
    }

        #libraryLogEditPage .chip .close {
            border: 0;
            background: transparent;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            #libraryLogEditPage .chip .close i {
                font-size: .8rem;
            }
</style>

<div id="libraryLogEditPage">
    <h2 class="page-title">
        <span class="logo-dot"></span>
        Edit Library Log
    </h2>

    <form asp-action="Edit"
          asp-route-id="@Model.LogId"
          method="post"
          class="card-glass glas-all-style"
          id="logForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="LogId" />

        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-pencil-square"></i> Log Information
            </div>
            <div class="wf">
                <span class="status-pill @StatusBadge(Model.Status ?? "Pending")">
                    @Model.Status
                </span>
                <small>
                    <i class="bi bi-check2"></i>
                    Approved: @fmt(Model.ApprovedUtc)
                </small>
                <small>
                    <i class="bi bi-arrow-90deg-left"></i>
                    Returned: @fmt(Model.ReturnedUtc)
                </small>

                @if ((Model.Status ?? "Pending") == "Pending")
                {
                    <button type="submit"
                            class="btn btn-sm btn-success"
                            formnovalidate
                            formaction="@Url.Action("Approve", "LibraryLogs", new { id = Model.LogId })">
                        <i class="bi bi-check2-circle"></i> Approve
                    </button>
                }
            </div>
        </div>

        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="StudentName" class="form-label"></label>
                    <input asp-for="StudentName" class="form-control" />
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="Gender" class="form-label"></label>
                    <select asp-for="Gender" class="form-select">
                        <option value="">-- Select Gender --</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="VisitDate" class="form-label"></label>
                    <input type="text"
                           class="form-control"
                           value="@Model.VisitDate.ToString("yyyy-MM-dd")"
                           readonly />
                    <input type="hidden" asp-for="VisitDate" />
                    <span asp-validation-for="VisitDate" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="Purpose" class="form-label"></label>
                    <input asp-for="Purpose" class="form-control" />
                    <span asp-validation-for="Purpose" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="Notes" class="form-label"></label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Created On (UTC)</label>
                    <input class="form-control"
                           value="@Model.CreatedUtc.ToString("yyyy-MM-dd HH:mm")"
                           readonly
                           disabled />
                    <input type="hidden" asp-for="CreatedUtc" />
                </div>

                <input type="hidden" asp-for="Status" />
                <input type="hidden" asp-for="ApprovedUtc" />
                <input type="hidden" asp-for="ReturnedUtc" />
            </div>
        </div>

        <div class="card-header">
            <i class="bi bi-bookshelf"></i> Books (Pick multiple without rows)
        </div>

        <div class="card-body">
            <div class="picker">
                <div class="list">
                    <div class="list-head">
                        <i class="bi bi-search"></i>
                        <input id="q"
                               class="form-control form-control-sm"
                               placeholder="Search title or barcode..." />
                    </div>
                    <div class="list-body" id="listBody">
                        @foreach (var opt in bookList)
                        {
                            <div class="book-item" data-id="@opt.Value" data-text="@opt.Text">
                                <div class="title">@opt.Text</div>
                                <button type="button" class="pick" data-id="@opt.Value">Pick</button>
                            </div>
                        }
                    </div>
                </div>

                <div class="chosen">
                    <div class="list-head">
                        <i class="bi bi-check2-circle"></i> Selected
                    </div>
                    <div class="list-body" id="chosenBody">
                        <!-- built by JS -->
                    </div>
                </div>
            </div>

            <div id="hiddenInputs"></div>
        </div>

        <div class="card-body d-flex gap-2 justify-content-end">
            <a asp-action="Index" class="btn-glass btn-outline">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            <button type="submit" class="btn-glass btn-brand">
                <i class="bi bi-check2-circle"></i> Save
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var listBody = document.getElementById('listBody');
            var chosenBody = document.getElementById('chosenBody');
            var hiddenInputs = document.getElementById('hiddenInputs');
            var q = document.getElementById('q');

            // Selected IDs (from model)
            var SELECTED = new Set(
                (@Html.Raw(JsonSerializer.Serialize(Model.BookIds ?? new List<int>())))
                    .map(function (id) { return String(id); })
            );

            var BOOK_MAP = @Html.Raw(JsonSerializer.Serialize(bookMap));

            function emptyHint() {
                if (chosenBody.querySelectorAll('.chip').length === 0) {
                    chosenBody.innerHTML = '<div class="muted">None selected.</div>';
                }
            }

            function rebuildHidden() {
                hiddenInputs.innerHTML = '';
                Array.from(SELECTED).forEach(function (id, idx) {
                    var input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'BookIds[' + idx + ']';
                    input.value = id;
                    hiddenInputs.appendChild(input);
                });
            }

            function renderChip(id, text) {
                var chip = document.createElement('span');
                chip.className = 'chip';
                chip.dataset.id = id;
                chip.innerHTML =
                    '<span>' + (text || BOOK_MAP[id] || id) + '</span>' +
                    '<button type="button" class="close" title="Remove">' +
                    '  <i class="bi bi-x-lg"></i>' +
                    '</button>';

                chip.querySelector('.close').addEventListener('click', function (ev) {
                    ev.preventDefault();
                    SELECTED.delete(id);
                    var row = listBody.querySelector('.book-item[data-id="' + id + '"]');
                    if (row) row.style.display = '';
                    chip.remove();
                    rebuildHidden();
                    emptyHint();
                });

                chosenBody.appendChild(chip);
            }

            function bindPickButtons() {
                listBody.querySelectorAll('.pick').forEach(function (btn) {
                    btn.addEventListener('click', function (e) {
                        e.preventDefault();
                        var id = String(e.currentTarget.getAttribute('data-id'));
                        if (SELECTED.has(id)) return;

                        var row = e.currentTarget.closest('.book-item');
                        var text = (row && row.getAttribute('data-text')) || BOOK_MAP[id] || id;

                        SELECTED.add(id);
                        if (row) row.style.display = 'none';

                        if (chosenBody.querySelector('.muted')) {
                            chosenBody.innerHTML = '';
                        }

                        renderChip(id, text);
                        rebuildHidden();
                    });
                });
            }

            q.addEventListener('input', function () {
                var kw = q.value.toLowerCase().trim();
                listBody.querySelectorAll('.book-item').forEach(function (it) {
                    var id = String(it.getAttribute('data-id'));
                    if (SELECTED.has(id)) {
                        it.style.display = 'none';
                        return;
                    }
                    var txt = (it.getAttribute('data-text') || '').toLowerCase();
                    it.style.display = txt.indexOf(kw) !== -1 ? '' : 'none';
                });
            });

            // init
            bindPickButtons();

            (function preload() {
                if (SELECTED.size === 0) {
                    emptyHint();
                    rebuildHidden();
                    return;
                }
                chosenBody.innerHTML = '';
                SELECTED.forEach(function (id) {
                    var row = listBody.querySelector('.book-item[data-id="' + id + '"]');
                    if (row) row.style.display = 'none';
                    var text = (row && row.getAttribute('data-text')) || BOOK_MAP[id] || id;
                    renderChip(id, text);
                });
                rebuildHidden();
            })();
        });
    </script>
}
