@model LibrarySystemBBU.Models.MemberRegisterViewModel

@{
    Layout = null;
    ViewData["Title"] = "Member Register";
}

<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: radial-gradient(circle at top,#fee2e2,#eff6ff,#ffffff);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    .member-reg-card {
        width: 440px;
        border-radius: 18px;
        background: linear-gradient(135deg,#ffffff,#e0f2fe);
        box-shadow: 0 18px 40px rgba(15,23,42,.2);
        border: 1px solid rgba(56,189,248,.45);
    }

    .member-chip {
        display: inline-flex;
        align-items: center;
        gap: .4rem;
        font-size: .8rem;
        padding: .2rem .7rem;
        border-radius: 999px;
        background: rgba(6,182,212,.12);
        color: #0e7490;
    }
</style>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card member-reg-card p-4">

        <!-- STEP 1: Registration form -->
        <div class="text-center mb-3">
            <div class="member-chip mb-2">
                <span>🆕 Member Registration</span>
            </div>
            <h3 class="fw-bold text-primary mb-0">Join the Library</h3>
            <p class="text-muted mb-1">Create your member account to start borrowing.</p>
        </div>

        <form asp-action="Register" asp-controller="MemberAuth" method="post" autocomplete="off" novalidate>
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control rounded-pill" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control rounded-pill" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control rounded-pill" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control rounded-pill" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MemberType" class="form-label"></label>
                <input asp-for="MemberType" class="form-control rounded-pill"
                       placeholder="Student, Staff, External, ..." />
                <span asp-validation-for="MemberType" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control rounded-pill" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-pill shadow-sm">
                🎉 Create Member Account
            </button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" asp-controller="MemberAuth" class="text-decoration-none text-primary">
                Already a member? Sign in
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
