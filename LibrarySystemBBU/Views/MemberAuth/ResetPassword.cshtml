@model LibrarySystemBBU.ViewModels.ResetPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Member Reset Password";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: radial-gradient(circle at top, #e0f2fe, #eff6ff, #ffffff);
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        }

        .member-auth-card {
            width: 380px;
            border-radius: 18px;
            background: linear-gradient(145deg,#ffffff,#e5f0ff);
            box-shadow: 0 18px 40px rgba(15,23,42,.18);
            border: 1px solid rgba(129,140,248,.35);
        }

        .member-badge {
            display: inline-flex;
            align-items: center;
            gap: .4rem;
            padding: .25rem .7rem;
            font-size: .8rem;
            border-radius: 999px;
            background: rgba(37,99,235,.08);
            color: #1d4ed8;
        }

        .email-text {
            font-weight: 700;
            color: #1d4ed8;
            word-break: break-word;
            margin-top: .25rem;
        }

        .member-link {
            color: #1d4ed8;
            text-decoration: none;
            font-weight: 600;
            font-size: .9rem;
        }

            .member-link:hover {
                text-decoration: underline;
                color: #0b3aa8;
            }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card member-auth-card p-4">
            <div class="text-center mb-3">
                <div class="member-badge mb-2">
                    <span>📚 Member Portal</span>
                </div>
                <h3 class="fw-bold text-primary mb-0">Reset Password</h3>
                <p class="text-muted mb-1">Enter OTP and set your new password</p>
                <div class="email-text">@Model.EmailOrUserName</div>
            </div>

            <form asp-controller="MemberAuth" asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                <input asp-for="EmailOrUserName" type="hidden" />

                <div class="mb-3">
                    <label asp-for="OtpCode" class="form-label">OTP Code</label>
                    <input asp-for="OtpCode" class="form-control rounded-pill" placeholder="6-digit code" />
                    <span asp-validation-for="OtpCode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">New Password</label>
                    <input asp-for="NewPassword" type="password" class="form-control rounded-pill" placeholder="New password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmNewPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmNewPassword" type="password" class="form-control rounded-pill" placeholder="Confirm password" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 rounded-pill shadow-sm">
                    🔐 Reset Password
                </button>

                <div class="text-center mt-3">
                    <a asp-controller="MemberAuth" asp-action="Login" class="member-link">Back to Login</a>
                </div>
            </form>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
