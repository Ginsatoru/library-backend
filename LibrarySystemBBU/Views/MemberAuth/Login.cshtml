@model LibrarySystemBBU.Models.MemberLoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Member Login";
}
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: radial-gradient(circle at top, #e0f2fe, #eff6ff, #ffffff);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    .member-auth-card {
        width: 380px;
        border-radius: 18px;
        background: linear-gradient(145deg,#ffffff,#e5f0ff);
        box-shadow: 0 18px 40px rgba(15,23,42,.18);
        border: 1px solid rgba(129,140,248,.35);
    }

    .member-badge {
        display: inline-flex;
        align-items: center;
        gap: .4rem;
        padding: .25rem .7rem;
        font-size: .8rem;
        border-radius: 999px;
        background: rgba(37,99,235,.08);
        color: #1d4ed8;
    }

    .member-link {
        color: #1d4ed8;
        text-decoration: none;
        font-weight: 600;
        font-size: .9rem;
    }

        .member-link:hover {
            text-decoration: underline;
            color: #0b3aa8;
        }
</style>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card member-auth-card p-4">
        <div class="text-center mb-3">
            <div class="member-badge mb-2">
                <span>📚 Member Portal</span>
            </div>
            <h3 class="fw-bold text-primary mb-0">Welcome Back</h3>
            <p class="text-muted mb-1">Sign in to view your loans &amp; history</p>
        </div>

        @if (TempData["MemberResetPwdSuccess"] != null)
        {
            <div class="alert alert-success py-2">@TempData["MemberResetPwdSuccess"]</div>
        }

        <form asp-action="Login" asp-controller="MemberAuth" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="Login" class="form-label"></label>
                <input asp-for="Login"
                       class="form-control rounded-pill"
                       placeholder="Email / Phone / Full name" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control rounded-pill"
                       placeholder="Your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-flex align-items-center justify-content-between mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="RememberMe" id="RememberMe" />
                    <label class="form-check-label" for="RememberMe">
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>

                <!-- ✅ Added Forgot Password link -->
                <a asp-controller="MemberAuth" asp-action="ForgotPassword" class="member-link">
                    Forgot password?
                </a>
            </div>

            <input type="hidden" asp-for="ReturnUrl" />

            <button type="submit" class="btn btn-primary w-100 rounded-pill shadow-sm mb-2">
                🔑 Member Sign In
            </button>
        </form>

        <div class="text-center mt-2">
            <small class="text-muted">Not a member yet?</small><br />
            <a asp-action="Register" asp-controller="MemberAuth" class="text-decoration-none">
                ✨ Create a member account
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
