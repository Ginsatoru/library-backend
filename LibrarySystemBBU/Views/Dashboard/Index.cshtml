            <div class="kpi">
            <span class="ico"><i class="fas fa-book"></i></span>
            <div class="label">Total Books</div>
            <div class="val">@Model.TotalBooks</div>
            <a href="@Url.Action("Index", "Books")">View <i class="fas fa-arrow-right"></i></a>
            </div>
            </div> *@

