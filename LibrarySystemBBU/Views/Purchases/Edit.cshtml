@model LibrarySystemBBU.Models.Purchase

@{
    ViewData["Title"] = "Edit Purchase";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<style>
    .card-3d {
        border: none;
        border-radius: 2rem;
        box-shadow: 0 10px 24px 0 rgba(0,0,0,0.11), 0 2px 4px 0 rgba(0,0,0,0.13);
        background: linear-gradient(135deg, #f0fdfa 0%, #f8fafc 100%);
        overflow: hidden;
        transition: transform .2s, box-shadow .2s;
    }

        .card-3d:hover {
            transform: translateY(-5px) scale(1.01);
            box-shadow: 0 16px 32px 0 rgba(16,185,129,0.17), 0 6px 12px 0 rgba(0,0,0,0.14);
        }

    .btn-glass {
        background: rgba(16,185,129,0.12);
        border: 1px solid #6ee7b7;
        color: #059669;
        transition: all 0.2s;
        border-radius: 50px;
        font-weight: 600;
    }

        .btn-glass:hover {
            background: #34d399;
            color: #fff;
            border: 1px solid #059669;
        }
</style>

<div class="row justify-content-center my-4">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-lg border-0 card-3d">
            <div class="card-header bg-success bg-gradient text-white d-flex align-items-center" style="border-radius: 2rem 2rem 0 0;">
                <i class="fa-solid fa-pen-to-square fa-lg me-2"></i>
                <h5 class="mb-0 fw-bold">Edit Purchase</h5>
            </div>
            <div class="card-body px-4 py-5">
                <form asp-action="Edit" autocomplete="off">
                    <input type="hidden" asp-for="PurchaseId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="BookId" class="form-label fw-semibold">
                            <i class="fa-solid fa-book"></i> Book Title
                        </label>
                        <select asp-for="BookId" class="form-select shadow-sm" asp-items="ViewBag.BookId" required autofocus>
                            <option value="">-- Select a Book --</option>
                        </select>
                        <span asp-validation-for="BookId" class="text-danger small"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label asp-for="Quantity" class="form-label fw-semibold">
                                <i class="fa-solid fa-box"></i> Quantity
                            </label>
                            <input asp-for="Quantity" class="form-control shadow-sm" type="number" min="1" placeholder="1" required />
                            <span asp-validation-for="Quantity" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Cost" class="form-label fw-semibold">
                                <i class="fa-solid fa-dollar-sign"></i> Cost
                            </label>
                            <input asp-for="Cost" class="form-control shadow-sm" type="number" min="0" step="0.01" placeholder="0.00" required />
                            <span asp-validation-for="Cost" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3 mt-3">
                        <label asp-for="PurchaseDate" class="form-label fw-semibold">
                            <i class="fa-solid fa-calendar-day"></i> Purchase Date
                        </label>
                        <input asp-for="PurchaseDate" class="form-control shadow-sm" type="date" required />
                        <span asp-validation-for="PurchaseDate" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Supplier" class="form-label fw-semibold">
                            <i class="fa-solid fa-user-tie"></i> Supplier
                        </label>
                        <input asp-for="Supplier" class="form-control shadow-sm" placeholder="Enter supplier name" required />
                        <span asp-validation-for="Supplier" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label fw-semibold">
                            <i class="fa-solid fa-file-alt"></i> Notes
                        </label>
                        <textarea asp-for="Notes" class="form-control shadow-sm" rows="2" placeholder="Optional notes"></textarea>
                        <span asp-validation-for="Notes" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="fa-solid fa-arrow-left"></i> Back
                        </a>
                        <button type="submit" class="btn btn-success rounded-pill px-5 shadow btn-glass fw-bold">
                            <i class="fa-solid fa-save"></i> Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
