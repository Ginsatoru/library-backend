@model IEnumerable<LibrarySystemBBU.Models.BookReturn>

@{
    ViewData["Title"] = "Book Returns";
}

<style>
    .adminlte-card {
        background: #fafdff;
        border-radius: 2rem;
        box-shadow: 0 6px 32px 0 rgba(35,99,169,0.07);
    }

    .glass-btn {
        background: rgba(35,99,169,0.16);
        color: #2363A9;
        border: none;
        border-radius: 2rem;
        font-weight: 600;
        transition: background 0.17s, color 0.17s, box-shadow 0.2s;
        box-shadow: 0 2px 8px 0 rgba(35,99,169,0.10);
    }

        .glass-btn:hover, .glass-btn:focus {
            background: #2363A9;
            color: #fff;
            box-shadow: 0 6px 24px 0 rgba(35,99,169,0.16);
        }

    .badge-status {
        font-size: 1em;
        font-weight: 600;
        border-radius: 1.2em;
        padding: 0.25em 1.1em;
    }

    .fw-bold {
        font-weight: 700;
    }

    .table-row {
        transition: box-shadow 0.15s;
    }

        .table-row:hover {
            box-shadow: 0 4px 24px 0 rgba(35,99,169,0.09);
        }

    .icon-blue {
        color: #2363A9;
    }

    .icon-yellow {
        color: #f7b924;
    }

    .icon-green {
        color: #18b677;
    }

    .icon-teal {
        color: #20b4cb;
    }

    .icon-grey {
        color: #909090;
    }

    .icon-red {
        color: #db3d3d;
    }
</style>

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-11">
            <div class="adminlte-card p-4 border-0">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="mb-0" style="color:#2363A9;font-weight:700;">
                        <i class="fas fa-undo-alt icon-blue me-2"></i> Book Returns
                    </h3>
                    <a asp-action="Create" class="glass-btn btn btn-sm">
                        <i class="fas fa-plus-circle"></i> Create New
                    </a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle bg-white rounded-3 overflow-hidden shadow-sm">
                        <thead style="background: linear-gradient(90deg, #2363A9 0%, #57b5ff 100%); color: #fff;">
                            <tr>
                                <th><i class="fas fa-calendar-check icon-blue"></i> Return Date</th>
                                <th><i class="fas fa-clock icon-yellow"></i> Late Days</th>
                                <th><i class="fas fa-money-bill-wave icon-red"></i> Fine</th>
                                <th><i class="fas fa-money-bill icon-teal"></i> Paid</th>
                                <th><i class="fas fa-coins icon-yellow"></i> Refund</th>
                                <th><i class="fas fa-check-circle icon-green"></i> Condition</th>
                                <th><i class="fas fa-sticky-note icon-grey"></i> Notes</th>
                                <th><i class="fas fa-receipt icon-blue"></i> Loan ID</th>
                                <th><i class="fas fa-cogs icon-blue"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="table-row">
                                    <td>@item.ReturnDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @if (item.LateDays > 0)
                                        {
                                            <span class="badge-status bg-warning text-dark">@item.LateDays</span>
                                        }
                                        else
                                        {
                                            <span class="badge-status bg-success text-white">On time</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.FineAmount > 0)
                                        {
                                            <span class="badge-status bg-danger text-white fw-bold">
                                                $@item.FineAmount.ToString("0.00")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.AmountPaid > 0)
                                        {
                                            <span class="badge-status bg-info text-white">
                                                $@item.AmountPaid.ToString("0.00")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    <td>
                                        @if (item.RefundAmount.HasValue && item.RefundAmount.Value > 0)
                                        {
                                            <span class="badge-status bg-primary text-white">
                                                $@item.RefundAmount.Value.ToString("0.00")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>

                                    <td>@item.ConditionOnReturn</td>
                                    <td>@item.Notes</td>
                                    <td>@item.Loan?.LoanId</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.ReturnId" class="glass-btn btn" title="Edit">
                                                <i class="fas fa-edit icon-blue"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.ReturnId" class="glass-btn btn" title="Details">
                                                <i class="fas fa-eye icon-teal"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.ReturnId" class="glass-btn btn" title="Delete" onclick="return confirm('Are you sure you want to delete this return?');">
                                                <i class="fas fa-trash-alt icon-red"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
