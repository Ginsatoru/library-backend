@model LibrarySystemBBU.Models.BookReturn

@{
    ViewData["Title"] = "Delete Book Return";
}

<style>
    .glass-btn {
        background: rgba(220, 53, 69, 0.16);
        color: #dc3545;
        border: none;
        border-radius: 2rem;
        box-shadow: 0 4px 20px 0 rgba(220,53,69,0.11);
        font-weight: 600;
        transition: background 0.18s, color 0.18s, box-shadow 0.2s;
        padding-left: 2em;
        padding-right: 2em;
    }

        .glass-btn:hover, .glass-btn:focus {
            background: #dc3545;
            color: #fff;
            box-shadow: 0 6px 32px 0 rgba(220,53,69,0.16);
        }

    .back-btn {
        border-radius: 2rem;
        font-weight: 600;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-danger" style="background:linear-gradient(90deg,#dc3545 0%, #f99196 100%); color:#fff; border-radius:1.5rem 1.5rem 0 0;">
                    <h4 class="mb-0">
                        <i class="fas fa-trash-alt"></i> Delete Book Return
                    </h4>
                </div>
                <div class="card-body p-4">
                    <h5 class="text-danger mb-3">Are you sure you want to delete this record?</h5>
                    <dl class="row mb-4">
                        <dt class="col-sm-4">Return Date</dt>
                        <dd class="col-sm-8">@Model.ReturnDate.ToString("yyyy-MM-dd")</dd>
                        <dt class="col-sm-4">Late Days</dt>
                        <dd class="col-sm-8">@Model.LateDays</dd>
                        <dt class="col-sm-4">Fine Amount</dt>
                        <dd class="col-sm-8">
                            $@Model.FineAmount.ToString("0.00")
                        </dd>
                        <dt class="col-sm-4">Amount Paid</dt>
                        <dd class="col-sm-8">
                            $@Model.AmountPaid.ToString("0.00")
                        </dd>
                        <dt class="col-sm-4">Refund Amount</dt>
                        <dd class="col-sm-8">
                            $@(Model.RefundAmount?.ToString("0.00") ?? "0.00")
                        </dd>

                        <dt class="col-sm-4">Condition On Return</dt>
                        <dd class="col-sm-8">@Model.ConditionOnReturn</dd>
                        <dt class="col-sm-4">Notes</dt>
                        <dd class="col-sm-8">@Model.Notes</dd>
                        <dt class="col-sm-4">Loan ID</dt>
                        <dd class="col-sm-8">@Model.Loan?.LoanId</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ReturnId" />
                        <button type="submit" class="glass-btn btn me-2">
                            <i class="fas fa-trash-alt"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary back-btn">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
