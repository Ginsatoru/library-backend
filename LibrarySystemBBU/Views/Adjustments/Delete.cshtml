@model LibrarySystemBBU.Models.Adjustment
@{
    ViewData["Title"] = "Delete Adjustment";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    /* key/value layout inside info cards */
    .kv .key {
        min-width: 11rem;
        font-weight: 600;
        color: var(--brand-700);
    }

    .kv .val {
        word-break: break-word;
    }

    .danger-alert {
        border-radius: 16px;
        border: 1px solid rgba(248, 113, 113, .35);
        background: linear-gradient(135deg, #fef2f2, #fee2e2);
        box-shadow: 0 10px 26px rgba(248, 113, 113, .35);
    }
</style>

<div class="container mt-4">
    <h2 class="page-title">
        <span class="logo-dot"></span>
        @ViewData["Title"]
    </h2>

    <div class="toolbar">
        <a asp-action="Index" class="btn-glass btn-outline">
            <i class="bi bi-list"></i> Back to List
        </a>

        <div class="ms-auto d-flex align-items-center gap-2 flex-wrap">
            <span class="pill">
                <i class="bi bi-calendar3"></i>
                Date: <strong>@Model.AdjustmentDate.ToString("yyyy-MM-dd")</strong>
            </span>
            <span class="pill">
                <i class="bi bi-tag"></i>
                Type: <strong>@Model.AdjustmentType</strong>
            </span>
            <span class="pill">
                <i class="bi bi-plus-slash-minus"></i>
                Header Qty: <strong>@Model.QuantityChange</strong>
            </span>
        </div>
    </div>

    <div class="alert danger-alert mt-3 d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>
            <strong>Are you sure?</strong> This action is permanent and cannot be undone.
        </div>
    </div>

    <div class="card-glass glas-all-style mt-3">
        <div class="section-title">
            <i class="bi bi-info-circle"></i> Adjustment Info
        </div>

        <div class="row gy-3 kv">
            <div class="col-12 col-md-6 d-flex">
                <div class="key me-2">
                    <i class="bi bi-journal-text me-1"></i>Catalog
                </div>
                <div class="val">
                    @(
                        Model?.Catalog == null
                        ? "(no catalog)"
                        : (string.IsNullOrEmpty(Model.Catalog.ISBN)
                        ? Model.Catalog.Title
                        : $"{Model.Catalog.Title} ({Model.Catalog.ISBN})")
                        )
                </div>
            </div>

            <div class="col-12 col-md-6 d-flex">
                <div class="key me-2">
                    <i class="bi bi-tag me-1"></i>Type
                </div>
                <div class="val">
                    <span class="pill">@Model.AdjustmentType</span>
                </div>
            </div>

            <div class="col-12 col-md-6 d-flex">
                <div class="key me-2">
                    <i class="bi bi-calendar3 me-1"></i>Date
                </div>
                <div class="val">@Model.AdjustmentDate.ToString("yyyy-MM-dd")</div>
            </div>

            <div class="col-12 col-md-6 d-flex">
                <div class="key me-2">
                    <i class="bi bi-plus-slash-minus me-1"></i>Header Quantity
                </div>
                <div class="val">@Model.QuantityChange</div>
            </div>

            <div class="col-12 d-flex">
                <div class="key me-2">
                    <i class="bi bi-chat-text me-1"></i>Reason
                </div>
                <div class="val">@Model.Reason</div>
            </div>
        </div>
    </div>

    @* Detail rows (Book / Barcode instead of Catalog) *@
    @if (Model?.AdjustmentDetails != null && Model.AdjustmentDetails.Any())
    {
        <div class="card-glass glas-all-style mt-3">
            <div class="section-title">
                <i class="bi bi-list-check"></i> Detail Rows
            </div>

            <div class="table-wrap mt-1">
                <table class="table table-sm table-hover table-striped table-bordered align-middle mb-0">
                    <thead>
                        <tr>
                            <th><i class="bi bi-upc-scan me-1"></i>Book / Barcode</th>
                            <th style="width:120px;"><i class="bi bi-boxes me-1"></i>Qty</th>
                            <th><i class="bi bi-stickies me-1"></i>Note</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in Model.AdjustmentDetails.OrderBy(x => x.AdjustmentDetailId))
                        {
                            <tr>
                                <td>
                                    @(
                                        d?.Book == null
                                        ? "(no book)"
                                        : (string.IsNullOrEmpty(d.Book.Barcode)
                                        ? d.Book.Title
                                        : $"{d.Book.Title} ({d.Book.Barcode})")
                                        )
                                </td>
                                <td>@d.QuantityChanged</td>
                                <td>@d.Note</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <form asp-action="Delete" method="post" id="deleteForm" class="card-glass glas-all-style mt-3">
        @Html.AntiForgeryToken()
        <div class="row g-3 align-items-center">
            <div class="col-md-8">
                <input type="hidden" asp-for="AdjustmentId" />
                <input type="hidden" asp-for="RowVersion" />

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="confirmChk">
                    <label class="form-check-label" for="confirmChk">
                        I understand this will permanently delete the adjustment.
                    </label>
                </div>
            </div>
            <div class="col-md-4 d-flex flex-wrap gap-2 justify-content-md-end">
                <button type="button" class="btn btn-danger" id="openConfirm" disabled>
                    <i class="bi bi-trash3 me-1"></i> Delete
                </button>
                <a asp-action="Index" class="btn-glass btn-outline">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </div>
    </form>
</div>

@* Confirm modal *@
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title d-flex align-items-center gap-2" id="confirmModalLabel">
                    <i class="bi bi-trash3"></i> Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                You are about to permanently delete this adjustment. This cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-light text-danger fw-semibold" form="deleteForm">
                    <i class="bi bi-trash3 me-1"></i> Yes, delete it
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            const chk = document.getElementById('confirmChk');
            const btn = document.getElementById('openConfirm');
            const modalEl = document.getElementById('confirmModal');

            chk?.addEventListener('change', () => {
                btn.disabled = !chk.checked;
            });

            btn?.addEventListener('click', () => {
                const modal = new bootstrap.Modal(modalEl);
                modal.show();
            });
        })();
    </script>
}
