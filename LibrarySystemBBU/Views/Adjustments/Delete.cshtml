@model LibrarySystemBBU.Models.Adjustment

@{
    ViewData["Title"] = "Delete Adjustment";
}

<link rel="stylesheet" href="~/font-awesome/css/all.min.css" />

<div class="row justify-content-center my-4">
    <div class="col-md-7 col-lg-5">
        <div class="card card-3d shadow-lg border-0">
            <div class="card-header bg-danger text-white d-flex align-items-center" style="border-top-left-radius:2rem;border-top-right-radius:2rem;">
                <i class="fa-solid fa-trash fa-2x me-2"></i>
                <h4 class="mb-0 fw-bold">Delete Adjustment</h4>
            </div>
            <div class="card-body py-4 px-5">
                <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                    <i class="fa-solid fa-triangle-exclamation fa-lg me-2"></i>
                    <div>
                        <strong>Warning!</strong> This action cannot be undone.<br>
                        Are you sure you want to delete this adjustment?
                    </div>
                </div>
                <dl class="row mb-3">
                    <dt class="col-sm-5"><i class="fa-solid fa-barcode text-primary"></i> Catalog</dt>
                    <dd class="col-sm-7">@Model.Catalog?.Barcode</dd>
                    <dt class="col-sm-5"><i class="fa-solid fa-tag text-info"></i> Type</dt>
                    <dd class="col-sm-7">@Model.AdjustmentType</dd>
                    <dt class="col-sm-5"><i class="fa-solid fa-arrow-right-arrow-left text-success"></i> Qty Change</dt>
                    <dd class="col-sm-7">@Model.QuantityChange</dd>
                    <dt class="col-sm-5"><i class="fa-solid fa-user text-warning"></i> Adjusted By</dt>
                    <dd class="col-sm-7">@Model.AdjustedByUser?.UserName</dd>
                </dl>
                <form asp-action="Delete" autocomplete="off">
                    <input type="hidden" asp-for="AdjustmentId" />
                    <div class="d-flex justify-content-between mt-4 flex-wrap gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fa-solid fa-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="fa-solid fa-trash"></i> Confirm Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
