@model LibrarySystemBBU.Models.LoanBookDetail

@{
    ViewData["Title"] = "Edit Loan Book Detail";
}

<style>
    .glass-btn {
        background: rgba(35,99,169,0.16);
        color: #2363A9;
        border: none;
        border-radius: 2rem;
        box-shadow: 0 4px 20px 0 rgba(35,99,169,0.10);
        font-weight: 600;
        padding-left: 2em;
        padding-right: 2em;
        transition: background 0.18s, color 0.18s, box-shadow 0.2s;
    }

        .glass-btn:hover, .glass-btn:focus {
            background: #2363A9;
            color: #fff;
            box-shadow: 0 6px 32px 0 rgba(35,99,169,0.16);
        }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header" style="background:linear-gradient(90deg,#2363A9 0%, #57b5ff 100%); color:#fff; border-radius:1.5rem 1.5rem 0 0;">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> Edit Loan Book Detail
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                        <input type="hidden" asp-for="LoanBookDetailId" />
                        <div class="mb-3">
                            <label asp-for="LoanId" class="form-label"></label>
                            <select asp-for="LoanId" class="form-select" asp-items="ViewBag.LoanId"></select>
                            <span asp-validation-for="LoanId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CatalogId" class="form-label"></label>
                            <select asp-for="CatalogId" class="form-select" asp-items="ViewBag.CatalogId"></select>
                            <span asp-validation-for="CatalogId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="BookId" class="form-label"></label>
                            <select asp-for="BookId" class="form-select" asp-items="ViewBag.BookId"></select>
                            <span asp-validation-for="BookId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConditionOut" class="form-label"></label>
                            <input asp-for="ConditionOut" class="form-control" />
                            <span asp-validation-for="ConditionOut" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConditionIn" class="form-label"></label>
                            <input asp-for="ConditionIn" class="form-control" />
                            <span asp-validation-for="ConditionIn" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="FineDetailAmount" class="form-label"></label>
                            <input asp-for="FineDetailAmount" class="form-control" />
                            <span asp-validation-for="FineDetailAmount" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="FineDetailReason" class="form-label"></label>
                            <input asp-for="FineDetailReason" class="form-control" />
                            <span asp-validation-for="FineDetailReason" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Created" class="form-label"></label>
                            <input asp-for="Created" class="form-control" />
                            <span asp-validation-for="Created" class="text-danger"></span>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="glass-btn btn">
                                <i class="fas fa-save"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-secondary rounded-pill">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
