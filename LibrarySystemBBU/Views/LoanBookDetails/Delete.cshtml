@model LibrarySystemBBU.Models.LoanBookDetail

@{
    ViewData["Title"] = "Delete Loan Book Detail";
}

<style>
    .details-label {
        font-weight: 600;
        color: #2363A9;
    }

    .details-value {
        font-weight: 500;
    }

    .glass-btn {
        background: rgba(35,99,169,0.16);
        color: #2363A9;
        border: none;
        border-radius: 2rem;
        font-weight: 600;
        padding-left: 2em;
        padding-right: 2em;
        transition: background 0.18s, color 0.18s, box-shadow 0.2s;
    }

        .glass-btn:hover, .glass-btn:focus {
            background: #2363A9;
            color: #fff;
            box-shadow: 0 6px 32px 0 rgba(35,99,169,0.16);
        }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header" style="background:linear-gradient(90deg,#2363A9 0%, #57b5ff 100%); color:#fff; border-radius:1.5rem 1.5rem 0 0;">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Confirm Delete
                    </h4>
                </div>
                <div class="card-body p-4">
                    <h5 class="text-danger mb-3">Are you sure you want to delete this Loan Book Detail?</h5>
                    <dl class="row mb-4">
                        <dt class="col-sm-4 details-label">Condition Out</dt>
                        <dd class="col-sm-8 details-value">@Model.ConditionOut</dd>
                        <dt class="col-sm-4 details-label">Condition In</dt>
                        <dd class="col-sm-8 details-value">@Model.ConditionIn</dd>
                        <dt class="col-sm-4 details-label">Fine Amount</dt>
                        <dd class="col-sm-8 details-value">
                            @if (Model.FineDetailAmount > 0)
                            {
                                <span class="text-danger fw-bold">
                                    $@Model.FineDetailAmount?.ToString("0.00")
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </dd>
                        <dt class="col-sm-4 details-label">Fine Reason</dt>
                        <dd class="col-sm-8 details-value">@Model.FineDetailReason</dd>
                        <dt class="col-sm-4 details-label">Created</dt>
                        <dd class="col-sm-8 details-value">
                            @(Model.Created != null ? Model.Created.ToString("yyyy-MM-dd") : "-")
                        </dd>
                        <dt class="col-sm-4 details-label">Modified</dt>
                        <dd class="col-sm-8 details-value">
                            @(Model.Modified != null ? Model.Modified.ToString("yyyy-MM-dd") : "-")
                        </dd>
                        <dt class="col-sm-4 details-label">Loan ID</dt>
                        <dd class="col-sm-8 details-value">@Model.Loan?.LoanId</dd>
                        <dt class="col-sm-4 details-label">Catalog Barcode</dt>
                        <dd class="col-sm-8 details-value">@Model.Catalog?.Barcode</dd>
                        <dt class="col-sm-4 details-label">Book Author</dt>
                        <dd class="col-sm-8 details-value">@Model.Book?.Author</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="LoanBookDetailId" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                            <a asp-action="Index" class="glass-btn btn">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
