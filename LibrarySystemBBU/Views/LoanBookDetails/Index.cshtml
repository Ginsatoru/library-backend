@model IEnumerable<LibrarySystemBBU.Models.LoanBookDetail>

@{
    ViewData["Title"] = "Loan Book Details";
}

<style>
    .adminlte-card {
        background: #fafdff;
        border-radius: 2rem;
        box-shadow: 0 6px 32px 0 rgba(35,99,169,0.07);
    }

    .glass-btn {
        background: rgba(35,99,169,0.16);
        color: #2363A9;
        border: none;
        border-radius: 2rem;
        font-weight: 600;
        transition: background 0.18s, color 0.18s, box-shadow 0.2s;
        box-shadow: 0 2px 8px 0 rgba(35,99,169,0.10);
        padding: 0.35em 1.5em;
    }

        .glass-btn:hover, .glass-btn:focus {
            background: #2363A9;
            color: #fff;
            box-shadow: 0 6px 24px 0 rgba(35,99,169,0.16);
        }

    .table-row {
        transition: box-shadow 0.15s;
    }

        .table-row:hover {
            box-shadow: 0 4px 24px 0 rgba(35,99,169,0.09);
        }
</style>

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-11">
            <div class="adminlte-card p-4 border-0">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="mb-0" style="color:#2363A9;font-weight:700;">
                        <i class="fas fa-book-medical"></i> Loan Book Details
                    </h3>
                    <a asp-action="Create" class="glass-btn btn btn-sm">
                        <i class="fas fa-plus-circle"></i> Create New
                    </a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle bg-white rounded-3 overflow-hidden shadow-sm">
                        <thead style="background: linear-gradient(90deg, #2363A9 0%, #57b5ff 100%); color: #fff;">
                            <tr>
                                <th>Condition Out</th>
                                <th>Condition In</th>
                                <th>Fine Amount</th>
                                <th>Fine Reason</th>
                                <th>Created</th>
                                <th>Modified</th>
                                <th>Loan ID</th>
                                <th>Catalog Barcode</th>
                                <th>Book Author</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="table-row">
                                    <td>@item.ConditionOut</td>
                                    <td>@item.ConditionIn</td>
                                    <td>
                                        @if (item.FineDetailAmount > 0)
                                        {
                                            <span class="badge bg-danger text-white fw-bold">$@item.FineDetailAmount?.ToString("0.00")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@item.FineDetailReason</td>
                                    <td>@(item.Created.ToString("yyyy-MM-dd") ?? "-")</td>
                                    <td>@(item.Modified.ToString("yyyy-MM-dd") ?? "-")</td>
                                    <td>@item.Loan?.LoanId</td>
                                    <td>@item.Catalog?.Barcode</td>
                                    <td>@item.Book?.Author</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.LoanBookDetailId" class="glass-btn btn" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.LoanBookDetailId" class="glass-btn btn" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.LoanBookDetailId" class="glass-btn btn" title="Delete" onclick="return confirm('Are you sure you want to delete this record?');">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
