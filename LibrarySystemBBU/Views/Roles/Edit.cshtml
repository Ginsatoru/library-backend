@model LibrarySystemBBU.Models.Roles

@{
    ViewData["Title"] = "Edit";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-4">
                    <h2 class="card-title mb-3 fw-semibold">
                        <i class="bi bi-pencil-square"></i> Edit Role
                    </h2>
                    <hr>
                    <form asp-action="Edit" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control form-control-lg rounded-3" placeholder="Enter role name..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary btn-lg rounded-3 shadow-sm px-4">
                                <i class="bi bi-save"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-3 shadow-sm px-4">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <!--
    If not already in your _Layout.cshtml, add Bootstrap Icons:
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    -->
}
