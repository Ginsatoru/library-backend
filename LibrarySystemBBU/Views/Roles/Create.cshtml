@model LibrarySystemBBU.Models.Roles

@{
    ViewData["Title"] = "Create";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-4">
                    <h2 class="card-title mb-3 fw-semibold">Create Role</h2>
                    <hr>
                    <form asp-action="Create" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control form-control-lg rounded-3" placeholder="Enter role name..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-3 shadow-sm">Create</button>
                        </div>
                    </form>
                    <div class="mt-4 text-center">
                        <a asp-action="Index" class="btn btn-link text-decoration-none">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
