@model LibrarySystemBBU.Models.BorrowReceiptVm
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Borrow Receipt - @Model.LoanId</title>
    <style>
        body {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            margin: 0;
            padding: 0;
            background: #f3f4f6;
        }
        .receipt {
            max-width: 600px;
            margin: 16px auto;
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            padding: 16px 20px;
        }
        h2 {
            margin-top: 0;
            text-align: center;
        }
        table.meta {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 12px;
        }
        table.meta td {
            padding: 4px 0;
            font-size: 14px;
        }
        table.meta td:first-child {
            width: 35%;
            font-weight: 600;
        }
        ul {
            margin: 0;
            padding-left: 18px;
            font-size: 14px;
        }
        .note {
            margin-top: 16px;
            font-size: 12px;
            color: #6b7280;
        }
        .footer {
            margin-top: 20px;
            font-size: 12px;
            text-align: center;
            color: #9ca3af;
        }

        @@media print {
            body {
                background: #fff;
            }
            .receipt {
                margin: 0;
                border: none;
                border-radius: 0;
                box-shadow: none;
            }
        }
    </style>
</head>
<body onload="window.print()">
    <div class="receipt">
        <h2>Borrow Receipt</h2>

        <table class="meta">
            <tr>
                <td>Loan #:</td>
                <td>@Model.LoanId</td>
            </tr>
            <tr>
                <td>Member:</td>
                <td>@Model.MemberName</td>
            </tr>
            <tr>
                <td>Loan Date:</td>
                <td>@Model.LoanDate.ToString("yyyy-MM-dd")</td>
            </tr>
            <tr>
                <td>Due Date:</td>
                <td>@Model.DueDate.ToString("yyyy-MM-dd")</td>
            </tr>
            <tr>
                <td>Borrowing Fee:</td>
                <td>@Model.BorrowingFee.ToString("0.00") ៛</td>
            </tr>
            <tr>
                <td>Deposit:</td>
                <td>@(Model.DepositAmount?.ToString("0.00") ?? "0.00") ៛</td>
            </tr>
            <tr>
                <td>Fee Status:</td>
                <td>@(Model.IsPaid ? "Paid" : "Unpaid")</td>
            </tr>
        </table>

        <h4>Borrowed Books:</h4>
        <ul>
            @foreach (var title in Model.BookTitles)
            {
                <li>@title</li>
            }
        </ul>

        <p class="note">
            This receipt is for the member. You do not need to return this receipt to the library.
        </p>

        <div class="footer">
            Printed on @DateTime.Now.ToString("yyyy-MM-dd HH:mm")
        </div>
    </div>
</body>
</html>
