@model LibrarySystemBBU.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<link rel="stylesheet" href="~/font-awesome/css/all.min.css" />
<style>
    .card-3d {
        border: none;
        border-radius: 2rem;
        box-shadow: 0 10px 24px 0 rgba(0,0,0,0.12),0 2px 4px 0 rgba(0,0,0,0.10);
        background: linear-gradient(135deg,#e0f2fe 0%,#f8fafc 100%);
        overflow: hidden;
    }

    .btn-glass {
        background: rgba(59,130,246,0.15);
        border: 1px solid #93c5fd;
        color: #2563eb;
        border-radius: 50px;
        font-weight: 600;
    }

        .btn-glass:hover {
            background: #60a5fa;
            color: #fff;
            border: 1px solid #2563eb;
        }
</style>

<div class="row justify-content-center mt-5">
    <div class="col-md-7 col-lg-6">
        <div class="card card-3d">
            <div class="card-body p-5">
                <h2 class="fw-bold text-danger text-center mb-4">
                    <i class="fa-solid fa-trash"></i> Delete Book
                </h2>
                <h5 class="text-center text-secondary mb-4">Are you sure you want to delete this book?</h5>
                <dl class="row mb-4 small">
                    <dt class="col-sm-4"><i class="fa-solid fa-book"></i> Title</dt>
                    <dd class="col-sm-8">@Model.Title</dd>
                    <dt class="col-sm-4"><i class="fa-solid fa-user-pen"></i> Author</dt>
                    <dd class="col-sm-8">@Model.Author</dd>
                    <dt class="col-sm-4"><i class="fa-solid fa-barcode"></i> ISBN</dt>
                    <dd class="col-sm-8">@Model.ISBN</dd>
                    <dt class="col-sm-4"><i class="fa-solid fa-bookmark"></i> Category</dt>
                    <dd class="col-sm-8">@Model.Category</dd>
                    <dt class="col-sm-4"><i class="fa-solid fa-layer-group"></i> Total Copies</dt>
                    <dd class="col-sm-8">@Model.TotalCopies</dd>
                    <dt class="col-sm-4"><i class="fa-solid fa-box-open"></i> Available</dt>
                    <dd class="col-sm-8">@Model.AvailableCopies</dd>
                </dl>
                <form asp-action="Delete" class="mt-4 text-center">
                    <input type="hidden" asp-for="BookId" />
                    <button type="submit" class="btn btn-danger px-4 me-2 rounded-pill shadow-sm">
                        <i class="fa-solid fa-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-glass rounded-pill px-3">
                        <i class="fa-solid fa-arrow-left"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
