@model LibrarySystemBBU.Models.BookLoan

@{
    ViewData["Title"] = "Edit";
}

<style>
    .glass-panel {
        background: rgba(35,99,169,0.10);
        border-radius: 2rem;
        box-shadow: 0 6px 24px 0 rgba(35,99,169,0.09);
        padding: 2.5rem 2rem 2rem 2rem;
        margin-top: 2rem;
        backdrop-filter: blur(2.5px);
    }

    .glass-btn {
        background: rgba(35,99,169,0.16);
        color: #2363A9;
        border: none;
        border-radius: 2rem;
        box-shadow: 0 4px 20px 0 rgba(35,99,169,0.10);
        font-weight: 600;
        transition: background 0.16s, color 0.16s, box-shadow 0.2s;
    }

        .glass-btn:hover, .glass-btn:focus {
            background: #2363A9;
            color: #fff;
            box-shadow: 0 6px 32px 0 rgba(35,99,169,0.16);
        }

    label .fa-fw {
        width: 1.4em;
    }

    .icon-blue {
        color: #2363A9;
    }

    .icon-green {
        color: #18b677;
    }

    .icon-yellow {
        color: #f7b924;
    }

    .icon-grey {
        color: #909090;
    }

    .icon-red {
        color: #db3d3d;
    }

    .icon-teal {
        color: #20b4cb;
    }

    .form-control, .form-select {
        border-radius: 1.2rem;
        border: 1.5px solid #2363A9;
    }

    .form-check-input:checked {
        background-color: #2363A9;
        border-color: #2363A9;
    }

    .back-link {
        color: #2363A9;
        font-weight: 500;
        transition: color 0.18s;
    }

        .back-link:hover {
            color: #14518c;
            text-decoration: underline;
        }
    
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="glass-panel">
                <h2 class="mb-4" style="color:#2363A9;">
                    <i class="fas fa-edit icon-blue"></i> Edit Book Loan
                </h2>
                <form asp-action="Edit" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="LoanId" />

                    <div class="mb-3">
                        <label asp-for="MemberId" class="form-label fw-semibold">
                            <i class="fas fa-user icon-blue fa-fw"></i> Member
                        </label>
                        <select asp-for="MemberId" class="form-select" asp-items="ViewBag.MemberId"></select>
                        <span asp-validation-for="MemberId" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LoanDate" class="form-label fw-semibold">
                            <i class="fas fa-calendar-alt icon-blue fa-fw"></i> Loan Date
                        </label>
                        <input asp-for="LoanDate" class="form-control" type="date" />
                        <span asp-validation-for="LoanDate" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DueDate" class="form-label fw-semibold">
                            <i class="fas fa-hourglass-end icon-blue fa-fw"></i> Due Date
                        </label>
                        <input asp-for="DueDate" class="form-control" type="date" />
                        <span asp-validation-for="DueDate" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IsReturned" class="form-label fw-semibold">
                            <i class="fas fa-undo icon-green fa-fw"></i> Is Returned
                        </label>
                        <div class="form-check ms-2">
                            <input class="form-check-input" asp-for="IsReturned" />
                            <label class="form-check-label" for="IsReturned">
                                Returned
                            </label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BorrowingFee" class="form-label fw-semibold">
                            <i class="fas fa-dollar-sign icon-blue fa-fw"></i> Borrowing Fee
                        </label>
                        <input asp-for="BorrowingFee" class="form-control" />
                        <span asp-validation-for="BorrowingFee" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IsPaid" class="form-label fw-semibold">
                            <i class="fas fa-credit-card icon-teal fa-fw"></i> Is Paid
                        </label>
                        <div class="form-check ms-2">
                            <input class="form-check-input" asp-for="IsPaid" />
                            <label class="form-check-label" for="IsPaid">
                                Paid
                            </label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DepositAmount" class="form-label fw-semibold">
                            <i class="fas fa-piggy-bank icon-yellow fa-fw"></i> Deposit Amount
                        </label>
                        <input asp-for="DepositAmount" class="form-control" />
                        <span asp-validation-for="DepositAmount" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="glass-btn btn btn-lg">
                            <i class="fas fa-save"></i> Save
                        </button>
                    </div>
                </form>
                <div class="mt-4">
                    <a asp-action="Index" class="back-link"><i class="fas fa-arrow-left"></i> Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
