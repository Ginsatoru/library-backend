@model IEnumerable<LibrarySystemBBU.Models.BookLoan>
@{
    ViewData["Title"] = "Book Loans";
    var tomorrow = DateTime.Today.AddDays(1);
}

<style>
    .due-tomorrow-badge {
        background: #ffc107;
        color: #273145;
        font-weight: 600;
        border-radius: 1.3rem;
        padding: 0.2em 1.2em;
        margin-left: 8px;
        font-size: 0.99em;
    }

    .btn-allloan {
        background: #2363A9;
        color: #fff;
        border-radius: 2rem;
        font-weight: 600;
        border: none;
        padding: 0.37em 1.6em;
        box-shadow: 0 2px 14px 0 rgba(35,99,169,0.11);
        margin-left: 10px;
        transition: background 0.17s;
    }

        .btn-allloan:hover, .btn-allloan:focus {
            background: #174269;
            color: #fff;
        }

    .search-input {
        border-radius: 2rem;
        border: 1.5px solid #2363A9;
        padding: 8px 20px;
        font-size: 1.05rem;
        max-width: 240px;
        font-family: Arial, 'Font Awesome 6 Free', sans-serif;
        background: rgba(255,255,255,0.45);
        color: #2363A9;
        margin-right: 7px;
    }

    .glass-btn {
        background: rgba(35,99,169,0.16);
        color: #2363A9;
        border: none;
        border-radius: 2rem;
        box-shadow: 0 4px 20px 0 rgba(35,99,169,0.10);
        backdrop-filter: blur(3px);
        font-weight: 600;
        transition: background 0.18s, color 0.18s, box-shadow 0.2s;
    }

        .glass-btn:hover, .glass-btn:focus {
            background: #2363A9;
            color: #fff;
            box-shadow: 0 6px 32px 0 rgba(35,99,169,0.16);
        }

    .adminlte-card {
        background: #fafdff;
        border-radius: 2rem;
        box-shadow: 0 6px 32px 0 rgba(35,99,169,0.07);
    }

    .table-row {
        transition: box-shadow 0.19s, transform 0.19s;
    }

        .table-row:hover {
            box-shadow: 0 4px 24px 0 rgba(35,99,169,0.13);
            transform: scale(1.01);
        }

    .icon-blue {
        color: #2363A9;
    }

    .icon-green {
        color: #18b677;
    }

    .icon-yellow {
        color: #f7b924;
    }

    .icon-grey {
        color: #909090;
    }

    .icon-red {
        color: #db3d3d;
    }

    .icon-teal {
        color: #20b4cb;
    }

    .fw-bold {
        font-weight: 700;
    }

    .text-blue {
        color: #2363A9;
    }

    .badge.rounded-pill {
        font-size: 1em;
        font-weight: 600;
        padding: 0.45em 1.3em;
    }

    .dropdown-menu {
        min-width: 135px;
        border-radius: 1.2rem;
        box-shadow: 0 2px 16px 0 rgba(35,99,169,0.08);
    }

    .dropdown-item.active, .dropdown-item:active {
        background-color: #2363A9;
        color: #fff !important;
    }
</style>

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-11">
            <div class="card adminlte-card border-0">
                <div class="card-header" style="background: linear-gradient(90deg,#2363A9 0%, #57b5ff 100%); color: #fff; border-radius: 2rem 2rem 0 0;">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center align-items-start">
                        <div>
                            <h3 class="mb-0">
                                <i class="fas fa-book-open icon-blue me-2"></i> Book Loans
                            </h3>
                        </div>
                        <div class="d-flex align-items-center gap-2 flex-wrap mt-2 mt-md-0">
                            <input type="text" id="tableSearch"
                                   class="search-input shadow-sm"
                                   placeholder="Search..." />
                            <div class="btn-group">
                                <button type="button" id="filterLoanBtn" class="btn btn-allloan dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-list"></i> <span id="filterLabel">All Loans</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item filter-option active" href="#" data-filter="all"><i class="fas fa-list"></i> All</a></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="returned"><i class="fas fa-check-circle text-success"></i> Returned</a></li>
                                    <li><a class="dropdown-item filter-option" href="#" data-filter="notyet"><i class="fas fa-hourglass-half text-warning"></i> Not Yet</a></li>
                                </ul>
                            </div>
                            <a asp-action="Create" class="glass-btn btn btn-sm" title="Create new loan">
                                <i class="fas fa-plus-circle"></i> Create New
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table id="bookLoanTable" class="table table-striped table-hover align-middle bg-white rounded-3 overflow-hidden shadow-sm">
                            <thead style="background: linear-gradient(90deg, #2363A9 0%, #57b5ff 100%); color: #fff;">
                                <tr>
                                    <th><i class="fas fa-calendar-alt icon-blue"></i> Loan Date</th>
                                    <th><i class="fas fa-hourglass-end icon-yellow"></i> Due Date</th>
                                    <th><i class="fas fa-undo icon-green"></i> Returned?</th>
                                    <th><i class="fas fa-dollar-sign icon-blue"></i> Fee</th>
                                    <th><i class="fas fa-credit-card icon-teal"></i> Paid?</th>
                                    <th><i class="fas fa-piggy-bank icon-yellow"></i> Deposit</th>
                                    <th><i class="fas fa-user icon-grey"></i> Member</th>
                                    <th><i class="fas fa-cogs icon-blue"></i></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="table-row @(item.IsReturned ? "returned" : "notyet")">
                                        <td>@item.LoanDate.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            @item.DueDate.ToString("yyyy-MM-dd")
                                            @if (!item.IsReturned && item.DueDate == tomorrow)
                                            {
                                                <span class="due-tomorrow-badge">
                                                    <i class="fas fa-clock"></i> Due Tomorrow
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.IsReturned)
                                            {
                                                <span class="badge rounded-pill bg-success text-white">Returned</span>
                                            }
                                            else
                                            {
                                                <span class="badge rounded-pill bg-warning text-dark">Not yet</span>
                                            }
                                        </td>
                                        <td><span class="fw-bold text-blue">$@item.BorrowingFee.ToString("0.00")</span></td>
                                        <td>
                                            @if (item.IsPaid)
                                            {
                                                <span class="badge rounded-pill bg-info text-white">Paid</span>
                                            }
                                            else
                                            {
                                                <span class="badge rounded-pill bg-secondary text-white">Unpaid</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.DepositAmount.HasValue && item.DepositAmount.Value > 0)
                                            {
                                                <span class="text-primary">$@item.DepositAmount.Value.ToString("0.00")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @Html.Raw(item.LibraryMember?.FullName ?? "<span class='text-muted'>-</span>")
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.LoanId" class="glass-btn btn" title="Edit">
                                                    <i class="fas fa-edit icon-blue"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.LoanId" class="glass-btn btn" title="Details">
                                                    <i class="fas fa-eye icon-teal"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.LoanId" class="glass-btn btn" title="Delete" onclick="return confirm('Are you sure you want to delete this loan?');">
                                                    <i class="fas fa-trash-alt icon-red"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Table search
        $('#tableSearch').on('keyup', function () {
            var value = $(this).val().toLowerCase();
            // Only search visible (filtered) rows
            $("#bookLoanTable tbody tr:visible").filter(function () {
                $(this).toggle(
                    $(this).text().toLowerCase().indexOf(value) > -1
                );
            });
        });

        // Dropdown filter
        $('.filter-option').on('click', function (e) {
            e.preventDefault();
            $('.filter-option').removeClass('active');
            $(this).addClass('active');
            var filter = $(this).data('filter');
            var label = $(this).text().replace(/^\s*[\S]+\s*/, '').trim();
            if (!label) label = $(this).text().trim(); // fallback if no space
            $('#filterLabel').text(label);

            if (filter === 'all') {
                $("#bookLoanTable tbody tr").show();
            } else {
                $("#bookLoanTable tbody tr").hide();
                $("#bookLoanTable tbody tr." + filter).show();
            }
            $('#tableSearch').val('');
        });
    </script>
}
