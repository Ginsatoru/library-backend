@model LibrarySystemBBU.Models.BookLoan

@{
    ViewData["Title"] = "Create";
}

<!-- Select2 CSS (in <head> or here) -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<style>
    .glass-panel {
        background: rgba(35,99,169,0.10);
        border-radius: 2rem;
        box-shadow: 0 6px 24px 0 rgba(35,99,169,0.09);
        padding: 2.5rem 2rem 2rem 2rem;
        margin-top: 2rem;
        backdrop-filter: blur(2.5px);
    }

    .glass-btn {
        background: rgba(35,99,169,0.16);
        color: #2363A9;
        border: none;
        border-radius: 2rem;
        box-shadow: 0 4px 20px 0 rgba(35,99,169,0.10);
        font-weight: 600;
        transition: background 0.16s, color 0.16s, box-shadow 0.2s;
    }

    .glass-btn:hover, .glass-btn:focus {
        background: #2363A9;
        color: #fff;
        box-shadow: 0 6px 32px 0 rgba(35,99,169,0.16);
    }

    label .fa-fw {
        width: 1.4em;
    }

    .icon-blue {
        color: #2363A9;
    }

    .form-control, .form-select {
        border-radius: 1.2rem;
        border: 1.5px solid #2363A9;
    }

    .form-check-input:checked {
        background-color: #2363A9;
        border-color: #2363A9;
    }

    .back-link {
        color: #2363A9;
        font-weight: 500;
        transition: color 0.18s;
    }

    .back-link:hover {
        color: #14518c;
        text-decoration: underline;
    }

    /* Select2 wrapper: fix dropdown placement */
    .select2-parent {
        position: relative;
        z-index: 2;
    }

    /* Optional: Match Select2 style with your theme */
    .select2-container--default .select2-selection--single {
        border-radius: 1.2rem;
        border: 1.5px solid #2363A9;
        height: 40px;
        padding-top: 5px;
    }
    .select2-container--default .select2-selection--single .select2-selection__rendered {
        color: #2363A9;
        font-weight: 500;
        padding-left: 12px;
    }
    .select2-container .select2-dropdown {
        border-radius: 1.2rem;
        z-index: 9999;
    }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="glass-panel">
                <h2 class="mb-4" style="color:#2363A9;">
                    <i class="fas fa-plus-circle icon-blue"></i> Create Book Loan
                </h2>
                <form asp-action="Create" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3 select2-parent">
                        <label asp-for="MemberId" class="form-label fw-semibold">
                            <i class="fas fa-user icon-blue fa-fw"></i> Member
                        </label>
                        <select asp-for="MemberId" class="form-select" asp-items="ViewBag.MemberId" id="member-select"></select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DueDate" class="form-label fw-semibold">
                            <i class="fas fa-hourglass-end icon-blue fa-fw"></i> Due Date
                        </label>
                        <input asp-for="DueDate" class="form-control" type="date" />
                        <span asp-validation-for="DueDate" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BorrowingFee" class="form-label fw-semibold">
                            <i class="fas fa-dollar-sign icon-blue fa-fw"></i> Borrowing Fee
                        </label>
                        <input asp-for="BorrowingFee" class="form-control" />
                        <span asp-validation-for="BorrowingFee" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IsPaid" class="form-label fw-semibold">
                            <i class="fas fa-credit-card icon-blue fa-fw"></i> Is Paid
                        </label>
                        <div class="form-check ms-2">
                            <input class="form-check-input" asp-for="IsPaid" />
                            <label class="form-check-label" for="IsPaid">
                                Paid
                            </label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DepositAmount" class="form-label fw-semibold">
                            <i class="fas fa-piggy-bank icon-blue fa-fw"></i> Deposit Amount
                        </label>
                        <input asp-for="DepositAmount" class="form-control" />
                        <span asp-validation-for="DepositAmount" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="glass-btn btn btn-lg">
                            <i class="fas fa-save"></i> Create Loan
                        </button>
                    </div>
                </form>
                <div class="mt-4">
                    <a asp-action="Index" class="back-link"><i class="fas fa-arrow-left"></i> Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Select2 JS -->
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#member-select').select2({
                placeholder: "Search member by name...",
                allowClear: true,
                width: '100%',
                dropdownParent: $('.select2-parent')
            });
        });
    </script>
}
