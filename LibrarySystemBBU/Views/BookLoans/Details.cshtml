@model LibrarySystemBBU.Models.BookLoan

@{
    ViewData["Title"] = "Details";
}

<style>
    .glass-panel {
        background: rgba(35,99,169,0.10);
        border-radius: 2rem;
        box-shadow: 0 6px 24px 0 rgba(35,99,169,0.09);
        padding: 2.5rem 2rem 2rem 2rem;
        margin-top: 2rem;
        backdrop-filter: blur(2.5px);
    }

    dt, dd {
        font-size: 1.12rem;
    }

        dt .fa-fw {
            width: 1.4em;
        }

    .icon-blue {
        color: #2363A9;
    }

    .icon-green {
        color: #18b677;
    }

    .icon-yellow {
        color: #f7b924;
    }

    .icon-teal {
        color: #20b4cb;
    }

    .icon-grey {
        color: #909090;
    }

    .icon-red {
        color: #db3d3d;
    }

    .glass-btn {
        background: rgba(35,99,169,0.16);
        color: #2363A9;
        border: none;
        border-radius: 2rem;
        box-shadow: 0 4px 20px 0 rgba(35,99,169,0.10);
        font-weight: 600;
        transition: background 0.16s, color 0.16s, box-shadow 0.2s;
        margin-right: 0.7rem;
        padding: 0.45rem 1.2rem;
    }

        .glass-btn:hover, .glass-btn:focus {
            background: #2363A9;
            color: #fff;
            box-shadow: 0 6px 32px 0 rgba(35,99,169,0.16);
            text-decoration: none;
        }

    .back-link {
        color: #2363A9;
        font-weight: 500;
        transition: color 0.18s;
    }

        .back-link:hover {
            color: #14518c;
            text-decoration: underline;
        }
    
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="glass-panel">
                <h2 class="mb-4" style="color:#2363A9;">
                    <i class="fas fa-info-circle icon-blue"></i> Book Loan Details
                </h2>
                <dl class="row mb-4">
                    <dt class="col-5 col-sm-4">
                        <i class="fas fa-calendar-alt icon-blue fa-fw"></i> Loan Date
                    </dt>
                    <dd class="col-7 col-sm-8">
                        @Model.LoanDate.ToString("yyyy-MM-dd")
                    </dd>

                    <dt class="col-5 col-sm-4">
                        <i class="fas fa-hourglass-end icon-yellow fa-fw"></i> Due Date
                    </dt>
                    <dd class="col-7 col-sm-8">
                        @Model.DueDate.ToString("yyyy-MM-dd")
                    </dd>

                    <dt class="col-5 col-sm-4">
                        <i class="fas fa-undo icon-green fa-fw"></i> Returned?
                    </dt>
                    <dd class="col-7 col-sm-8">
                        @if (Model.IsReturned)
                        {
                            <span class="badge rounded-pill bg-success text-white px-3"><i class="fas fa-check icon-green"></i> Returned</span>
                        }
                        else
                        {
                            <span class="badge rounded-pill bg-warning text-dark px-3"><i class="fas fa-hourglass-half icon-yellow"></i> Not yet</span>
                        }
                    </dd>

                    <dt class="col-5 col-sm-4">
                        <i class="fas fa-dollar-sign icon-blue fa-fw"></i> Borrowing Fee
                    </dt>
                    <dd class="col-7 col-sm-8">
                        $@Model.BorrowingFee
                    </dd>

                    <dt class="col-5 col-sm-4">
                        <i class="fas fa-credit-card icon-teal fa-fw"></i> Paid?
                    </dt>
                    <dd class="col-7 col-sm-8">
                        @if (Model.IsPaid)
                        {
                            <span class="badge rounded-pill bg-info text-white px-3"><i class="fas fa-coins icon-teal"></i> Paid</span>
                        }
                        else
                        {
                            <span class="badge rounded-pill bg-secondary text-white px-3"><i class="fas fa-coins icon-grey"></i> Unpaid</span>
                        }
                    </dd>

                    <dt class="col-5 col-sm-4">
                        <i class="fas fa-piggy-bank icon-yellow fa-fw"></i> Deposit Amount
                    </dt>
                    <dd class="col-7 col-sm-8">
                        @if (Model.DepositAmount.HasValue && Model.DepositAmount.Value > 0)
                        {
                            <span class="text-primary"><i class="fas fa-piggy-bank icon-yellow"></i> $@Model.DepositAmount.Value</span>
                        }
                        else
                        {
                            <span class="text-muted"><i class="fas fa-piggy-bank icon-grey"></i> -</span>
                        }
                    </dd>

                    <dt class="col-5 col-sm-4">
                        <i class="fas fa-user icon-blue fa-fw"></i> Member
                    </dt>
                    <dd class="col-7 col-sm-8">
                        @Model.LibraryMember?.Email
                    </dd>
                </dl>
                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.LoanId" class="glass-btn btn">
                        <i class="fas fa-edit icon-blue"></i> Edit
                    </a>
                    <a asp-action="Index" class="back-link">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
