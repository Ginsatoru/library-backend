@model LibrarySystemBBU.Models.LoanReminder

@{
    ViewData["Title"] = "Send Loan Reminder";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    /* ============================
           Send Loan Reminder (scoped)
           ============================ */
    #loanReminderSendPage {
        max-width: 560px;
        margin: 0 auto;
    }

        #loanReminderSendPage .muted {
            color: var(--muted, #6b7280);
            font-size: .9rem;
        }

        #loanReminderSendPage .card-glass.glas-all-style {
            margin-top: 8px;
        }

        #loanReminderSendPage .card-header {
            padding: 14px 16px;
            border-bottom: 1px solid rgba(1,0,140,.12);
            font-weight: 700;
            color: var(--brand-800, #05057a);
            background: linear-gradient(180deg,var(--brand-50,#eef0ff),rgba(255,255,255,.9));
            border-top-left-radius: 16px;
            border-top-right-radius: 16px;
        }

        #loanReminderSendPage .card-body {
            padding: 16px;
        }

        #loanReminderSendPage .status-pill {
            display: inline-flex;
            align-items: center;
            gap: .4rem;
            padding: 4px 10px;
            border-radius: 999px;
            border: 1px solid rgba(148,163,184,.55);
            background: linear-gradient(180deg,#ffffff,#f1f5f9);
            font-size: .78rem;
            color: var(--text,#0f172a);
        }

            #loanReminderSendPage .status-pill i {
                font-size: .9rem;
            }

        #loanReminderSendPage .hint {
            font-size: .82rem;
            color: var(--muted,#6b7280);
        }
</style>

<div id="loanReminderSendPage">
    <h2 class="page-title">
        <span class="logo-dot"></span>
        Send Loan Reminder
    </h2>

    <div class="card-glass glas-all-style">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="muted">
                <i class="bi bi-info-circle"></i>
                Send a reminder for overdue loans via Telegram
            </div>
            <a asp-action="Index" class="btn-glass btn-outline">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>
    </div>

    <form asp-action="Send" method="post" class="card-glass glas-all-style">
        @Html.AntiForgeryToken()

        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-send-check"></i> Reminder Information
            </div>
            <div class="status-pill">
                <i class="bi bi-exclamation-triangle-fill"></i>
                Overdue loans only
            </div>
        </div>

        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="LoanId" class="form-label">
                    <i class="bi bi-journal-bookmark"></i> Select Overdue Loan
                </label>
                <select asp-for="LoanId"
                        asp-items="ViewBag.OverdueLoans"
                        class="form-select">
                    <option value="">-- Select an Overdue Loan --</option>
                </select>
                <span asp-validation-for="LoanId" class="text-danger"></span>
                <div class="hint mt-1">
                    ជ្រើសរើស​ការ​ខ្ចីសៀវភៅ​ដែលហួសកំណត់ (Overdue) ដើម្បីផ្ញើ Reminder តាម Telegram។
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ReminderType" class="form-label">
                    <i class="bi bi-megaphone"></i> Reminder Type
                </label>
                <select asp-for="ReminderType"
                        asp-items="ViewBag.ReminderTypes"
                        class="form-select">
                    <option value="">-- Select Reminder Type --</option>
                </select>
                <span asp-validation-for="ReminderType" class="text-danger"></span>
                <div class="hint mt-1">
                    ឧ. <strong>ManualTelegram</strong>, <strong>ManualCall</strong>, <strong>ManualEmail</strong> ។
                </div>
            </div>

            <div class="alert alert-light border mt-3 mb-0">
                <div class="d-flex gap-2">
                    <i class="bi bi-telegram text-primary"></i>
                    <div class="hint mb-0">
                        Reminder នឹងផ្ញើទៅ <strong>Telegram Chat ID</strong> របស់សមាជិក
                        ដែលបានភ្ជាប់ក្នុង Member.
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body d-flex gap-2 justify-content-end pt-0">
            <a asp-action="Index" class="btn-glass btn-outline">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
            <button type="submit" class="btn-glass btn-brand">
                <i class="bi bi-send-fill"></i> Send Reminder
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
