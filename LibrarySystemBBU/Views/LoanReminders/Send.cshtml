@model LibrarySystemBBU.Models.LoanReminder

@{
    ViewData["Title"] = "Send Loan Reminder";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100 antialiased flex items-center justify-center min-h-screen py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg">
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Send Loan Reminder
        </h2>

        <form asp-action="Send" method="post" class="mt-8 space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>

            <div class="rounded-md shadow-sm -space-y-px">
                <!-- Overdue Loan Selection -->
                <div>
                    <label asp-for="LoanId" class="block text-sm font-medium text-gray-700 mb-1">Select Overdue Loan</label>
                    <select asp-for="LoanId" asp-items="ViewBag.OverdueLoans" class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm">
                        <option value="">-- Select an Overdue Loan --</option>
                    </select>
                    <span asp-validation-for="LoanId" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <!-- Reminder Type Selection -->
                <div class="mt-4">
                    <label asp-for="ReminderType" class="block text-sm font-medium text-gray-700 mb-1">Reminder Type</label>
                    <select asp-for="ReminderType" asp-items="ViewBag.ReminderTypes" class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm">
                        <option value="">-- Select Reminder Type --</option>
                    </select>
                    <span asp-validation-for="ReminderType" class="text-red-500 text-xs mt-1 block"></span>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="mt-6">
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Send Reminder
                </button>
            </div>
        </form>
    </div>

    <!-- Client-side Validation Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
