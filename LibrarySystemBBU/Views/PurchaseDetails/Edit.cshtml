@model LibrarySystemBBU.Models.PurchaseDetail

@{
    ViewData["Title"] = "Edit Purchase Detail";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<style>
    .card-3d {
        border: none;
        border-radius: 1.5rem;
        box-shadow: 0 8px 24px 0 rgba(16,185,129,0.13), 0 2px 6px 0 rgba(0,0,0,0.11);
        background: linear-gradient(135deg, #f0fdfa 0%, #f8fafc 100%);
        overflow: hidden;
        transition: transform .2s, box-shadow .2s;
    }

        .card-3d:hover {
            transform: translateY(-5px) scale(1.015);
            box-shadow: 0 16px 32px 0 rgba(16,185,129,0.16), 0 6px 12px 0 rgba(0,0,0,0.15);
        }

    .btn-glass {
        background: rgba(16,185,129,0.12);
        border: 1px solid #6ee7b7;
        color: #059669;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.2s;
    }

        .btn-glass:hover {
            background: #34d399;
            color: #fff;
            border: 1px solid #059669;
        }
</style>

<div class="row justify-content-center my-4">
    <div class="col-md-7 col-lg-5">
        <div class="card card-3d shadow-lg border-0">
            <div class="card-header bg-success text-white d-flex align-items-center" style="border-radius: 1.5rem 1.5rem 0 0;">
                <i class="fa-solid fa-pen-to-square fa-2x me-2"></i>
                <h4 class="mb-0 fw-bold">Edit Purchase Detail</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" autocomplete="off">
                    <input type="hidden" asp-for="PurchaseDetailId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="PurchaseId" class="form-label fw-semibold">
                            <i class="fa-solid fa-file-invoice-dollar"></i> Purchase
                        </label>
                        <select asp-for="PurchaseId" class="form-select" asp-items="ViewBag.PurchaseId" required>
                            <option value="">-- Select Purchase --</option>
                        </select>
                        <span asp-validation-for="PurchaseId" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="BookId" class="form-label fw-semibold">
                            <i class="fa-solid fa-book"></i> Book
                        </label>
                        <select asp-for="BookId" class="form-select" asp-items="ViewBag.BookId" required>
                            <option value="">-- Select Book --</option>
                        </select>
                        <span asp-validation-for="BookId" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label fw-semibold">
                            <i class="fa-solid fa-box"></i> Quantity
                        </label>
                        <input asp-for="Quantity" class="form-control" type="number" min="1" required id="qtyInput" />
                        <span asp-validation-for="Quantity" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="UnitPrice" class="form-label fw-semibold">
                            <i class="fa-solid fa-dollar-sign"></i> Unit Price
                        </label>
                        <input asp-for="UnitPrice" class="form-control" type="number" min="0" step="0.01" required id="unitInput" />
                        <span asp-validation-for="UnitPrice" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LineTotal" class="form-label fw-semibold">
                            <i class="fa-solid fa-calculator"></i> Line Total
                        </label>
                        <input asp-for="LineTotal" class="form-control bg-light" type="number" min="0" step="0.01" readonly id="totalInput" />
                        <span asp-validation-for="LineTotal" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Created" class="form-label fw-semibold">
                            <i class="fa-solid fa-clock"></i> Created
                        </label>
                        <input asp-for="Created" class="form-control bg-light" readonly />
                        <span asp-validation-for="Created" class="text-danger small"></span>
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fa-solid fa-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-success btn-glass px-4">
                            <i class="fa-solid fa-save"></i> Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Live calculate LineTotal
        function updateLineTotal() {
            var qty = parseFloat(document.getElementById('qtyInput').value) || 0;
            var unit = parseFloat(document.getElementById('unitInput').value) || 0;
            document.getElementById('totalInput').value = (qty * unit).toFixed(2);
        }
        document.getElementById('qtyInput').addEventListener('input', updateLineTotal);
        document.getElementById('unitInput').addEventListener('input', updateLineTotal);
        // initialize calculation
        updateLineTotal();
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
